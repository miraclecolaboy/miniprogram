
page {
  --bg-page: #F7F8FA;
  --bg-card: #FFFFFF;
  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --gold: #CFAA5E;       
  --black: #1A1A1A;      
  --btn-use-border: #E0E0E0; 
  --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.03); 
  
  background-color: var(--bg-page);
  height: 100vh;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  color: var(--text-main);
  box-sizing: border-box;
}

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
}

.tab-header {
  position: fixed;       
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  background: #FFFFFF;
  z-index: 100;
  border-bottom: 1rpx solid #F0F0F0;
}

.tab-item {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-sub);
  transition: all 0.2s;
}

.tab-item.active {
  color: var(--text-main);
  font-weight: 700;
  font-size: 30rpx;
}

.content-body {
  padding: 24rpx 32rpx 40rpx;
  padding-top: 112rpx;
}

.coupon-ticket {
  display: flex;
  height: 190rpx;
  background: var(--bg-card);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-card);
  border: 1rpx solid rgba(0,0,0,0.02);
  transition: transform 0.1s;
}

.coupon-ticket:active {
  transform: scale(0.99);
}

.ticket-left {
  width: 190rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  color: var(--gold);
}

.price-row {
  display: flex;
  align-items: baseline;
  line-height: 1;
  margin-bottom: 10rpx;
}

.symbol {
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 4rpx;
}

.amount {
  font-size: 64rpx;
  font-weight: 900;
  font-family: 'DIN Alternate', sans-serif;
  letter-spacing: -2rpx;
}

.condition {
  font-size: 22rpx;
  color: var(--text-sub);
  opacity: 0.8;
}

.ticket-split {
  width: 2rpx;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.split-line {
  width: 0;
  height: 70%;
  border-left: 2rpx dashed #EEEEEE;
}

.circle-top, .circle-bottom {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 32rpx;
  background-color: var(--bg-page); 
  border-radius: 50%;
  z-index: 2;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.03);
}

.circle-top { top: -16rpx; }
.circle-bottom { bottom: -16rpx; }

.ticket-right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 0 40rpx;
  min-width: 0;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 14rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tags-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  color: var(--text-sub);
  border: 1rpx solid #F0F0F0;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  background: #FAFAFA;
}

.count-badge {
  font-size: 20rpx;
  background: #F2F3F5;
  color: #666;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
}

.btn-claim {
  padding: 0 30rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: var(--black);
  color: var(--gold);
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 28rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.12);
  white-space: nowrap;
}

.btn-claim.disabled {
  background: #F2F3F5;
  color: #C5C6CB;
  box-shadow: none;
  pointer-events: none;
}

.btn-use {
  padding: 0 30rpx;
  height: 54rpx;
  line-height: 52rpx;
  border: 2rpx solid var(--btn-use-border);
  color: var(--text-main);
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 28rpx;
  background: transparent;
  white-space: nowrap;
}

.empty-tip, .loading-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 100rpx 0;
  letter-spacing: 1rpx;
}
