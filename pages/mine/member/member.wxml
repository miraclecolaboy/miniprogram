<view class="page-container">
  <scroll-view class="page-scroll" scroll-y="true" enhanced="true" show-scrollbar="{{false}}">
  <view class="card-wrap llj-enter llj-delay-1">
    <view class="member-card">
      <view class="card-texture"></view>
      
      <view class="card-header">
        <view class="user-info">
          <view class="name">{{memberTitle || 'Lv.0会员'}}</view>
        </view>
        <view class="card-logo">VIP</view>
      </view>

      <view class="card-footer">
        <view class="balance-label">
          <text>当前成长值 {{totalRecharge}}</text>
          <text wx:if="{{memberLevel < 4}}">Lv.{{memberLevel + 1}}</text>
        </view>
        
        <view class="progress-track">
          <view class="progress-fill" style="{{progressStyle}}"></view>
        </view>
        
        <view class="next-tip {{memberLevel >= 4 ? 'next-tip-gold' : ''}}">{{nextLevelText}}</view>
      </view>
    </view>
  </view>

  <view class="section-title llj-enter llj-delay-2">会员等级规则</view>
  <view class="rules-card llj-enter llj-delay-3">
    
    <view class="rule-item">
      <view class="rule-dot"></view>
      <view class="rule-content">
        <text class="rule-title">累计充值 100元 升级 Lv1</text>
        <view class="gift-highlight">赠送 5元无门槛券 x2</view>
      </view>
    </view>

    <view class="rule-item">
      <view class="rule-dot"></view>
      <view class="rule-content">
        <text class="rule-title">累计充值 300元 升级 Lv2</text>
        <view class="gift-highlight">赠送 5元无门槛券 x3 + 10元无门槛券 x1</view>
      </view>
    </view>

    <view class="rule-item">
      <view class="rule-dot"></view>
      <view class="rule-content">
        <text class="rule-title">累计充值 500元 升级 Lv3</text>
        <view class="gift-highlight">赠送 5元无门槛券 x5 + 20元无门槛券 x1</view>
      </view>
    </view>

    <view class="rule-item">
      <view class="rule-dot dot-lv4"></view>
      <view class="rule-content">
        <text class="rule-title">累计充值 1000元 升级 Lv4</text>
        
        <view class="gift-row special">
          <text class="tag">永久权益</text>
          <text class="val">全场下单享 95折</text>
        </view>
        
        <view class="gift-row">
          <text class="tag">升级礼包</text>
          <text>10元无门槛券 x5 + 20元无门槛券 x2</text>
        </view>
      </view>
    </view>
    
    <view class="note-text">
      * 单次充值跨级将自动补发所有中间等级礼包
    </view>
  </view>

  <view class="page-scroll-spacer"></view>
  </scroll-view>

  <view class="fixed-footer llj-enter llj-delay-4">
    <view class="primary-btn" bindtap="onTapRecharge">
      立即充值升级
    </view>
  </view>
</view>
