.page{
  min-height:100vh;
  background:#F6F7F9;
  padding:24rpx;
  box-sizing:border-box;
}

.card{
  background:#fff;
  border-radius:20rpx;
}

/* ================================= */
/* 会员卡片  */
/* ================================= */

.vip-swiper{
  margin-top: 8rpx;
  margin-bottom: 18rpx;
}

.vip-swiper-item{
  height: 100%;
  display: flex;
  align-items: stretch;
  justify-content: center;
}

.vip-card {
  position: relative;
  z-index: 10;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  
  padding: 32rpx;

  border-radius: 28rpx;
  width: 100%;
  transform: scale(0.94);
  transition: transform 220ms ease, opacity 220ms ease;
}

.vip-bg { position: absolute; inset: 0; pointer-events: none; }

.vip-circle{
  position:absolute;
  border-radius:999rpx;
  background:#fff;
  opacity:0.14;
}

.c1 { width: 220rpx; height: 240rpx; right: -70rpx; top: -100rpx; }
.c2 { width: 160rpx; height: 140rpx; left: -65rpx; bottom: -65rpx; }

.vip-header { display: flex; justify-content: space-between; align-items: flex-start; position: relative; z-index: 2; }

.vip-footer { display: flex; justify-content: space-between; align-items: flex-end; margin-top: 40rpx; position: relative; z-index: 2; }

.vip-status { font-size: 30rpx; font-weight: bold; }

.vip-entry { display: flex; align-items: center; opacity: 0.8; font-size: 24rpx; }

.vip-lv{ font-size: 30rpx; font-weight: 900; letter-spacing: 0.5rpx; }

.vip-benefit { font-size: 24rpx; font-weight: 500; opacity: 0.9; }

.vip-expire { font-size: 22rpx; opacity: 0.7; }


.vip-card.active{ transform: scale(1); }
.vip-card.locked{ opacity: 0.95; }
.vip-card.unlocked{ opacity: 1; }


.vip-card.locked{
  background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
  color: #111;
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.08);
}

.vip-card.unlocked{
  background: #000000;
  color: #f9fafb;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow:
    0 30rpx 60rpx -12rpx rgba(0, 0, 0, 0.5),
    inset 0 2rpx 2rpx rgba(255, 255, 255, 0.2);
}

.vip-card.unlocked .vip-status,
.vip-card.unlocked .vip-benefit { color: #D1BFA6; }

.vip-card.active.unlocked{
  border: 1rpx solid rgba(209, 191, 166, 0.55);
}


/* ================================= */
/* 权益详情（含经验条） */
/* ================================= */

.detail-card{
  margin-top: 0;
  padding: 24rpx;
}

.detail-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.detail-title{ font-size: 30rpx; font-weight: 900; color: #111; }

.detail-pill{
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
}
.pill-on{
  color: #111;
  background: rgba(209, 191, 166, 0.35);
}
.pill-off{
  color: #6B7280;
  background: rgba(0,0,0,0.06);
}

.detail-exp{ margin-top: 10rpx; }

.exp-bar{
  height: 16rpx;
  background: rgba(0,0,0,0.08);
  border-radius: 999rpx;
  overflow: hidden;
}

.exp-bar-inner{
  height: 100%;
  background: linear-gradient(90deg, #D1BFA6 0%, #BFA15F 100%);
  border-radius: 999rpx;
}

.exp-row{
  margin-top: 12rpx;
  display:flex;
  flex-direction: column;
  gap: 6rpx;
}

.exp-text{ font-size: 24rpx; color: #111; }
.exp-sub{ font-size: 22rpx; color: #666; }

.benefits{
  margin-top: 18rpx;
}

.benefit-row{
  display:flex;
  align-items:flex-start;
  gap: 12rpx;
  margin-top: 10rpx;
}

.dot{
  width: 10rpx;
  height: 10rpx;
  background: #BFA15F;
  border-radius: 999rpx;
  margin-top: 14rpx;
  flex: 0 0 auto;
}

.benefit-txt{
  font-size: 24rpx;
  color: #333;
  line-height: 1.8;
  flex: 1 1 auto;
}

/* ===== 底部按钮 ===== */
.footer{
  margin-top:32rpx;
}

.primary-btn{
  height:96rpx;
  background:#111;
  color:#fff;
  border-radius:20rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:30rpx;
  font-weight:700;
}
