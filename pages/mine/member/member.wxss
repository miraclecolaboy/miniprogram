page {
  background-color: #F8F9FB;
  height: 100vh;
  overflow: hidden;
}

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
}

.page-scroll-spacer {
  height: calc(240rpx + env(safe-area-inset-bottom));
}

.card-wrap {
  padding: 32rpx 32rpx 36rpx;
}

.member-card {
  background: linear-gradient(145deg, #323232 0%, #1A1A1A 100%);
  border-radius: 32rpx;
  aspect-ratio: 1.95 / 1;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 36rpx;
  color: #E3BF87;
  box-shadow: 0 40rpx 80rpx -20rpx rgba(0,0,0,0.35);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-texture {
  position: absolute;
  top: -60%;
  right: -30%;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(227, 191, 135, 0.12) 0%, transparent 65%);
  border-radius: 50%;
  pointer-events: none;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  z-index: 2;
}

.user-info .name {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.level-tag.active {
  display: inline-block;
  background: linear-gradient(90deg, #E3BF87, #C69C6D);
  color: #1A1A1A;
  font-size: 20rpx;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 700;
}

.card-logo {
  font-size: 44rpx;
  opacity: 0.15;
  font-style: italic;
  font-weight: 900;
  color: #fff;
}

.card-footer {
  position: relative;
  z-index: 2;
}

.balance-label {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  font-weight: 500;
}

.progress-track {
  height: 10rpx;
  background: rgba(255,255,255,0.15);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #E3BF87, #F2E3C9);
  box-shadow: 0 0 20rpx rgba(227, 191, 135, 0.6);
  transition: width 0.3s ease;
}

.next-tip {
  font-size: 20rpx;
  color: #FFFFFF;
}

.next-tip-gold {
  color: #FFFFFF;
  font-weight: 500;
}

.lv4-benefit-note {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(227, 191, 135, 0.95);
  letter-spacing: 0.4rpx;
}

.section-title {
  padding: 0 32rpx 20rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #1D1D1F;
}

.rules-card {
  margin: 0 32rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  border: 1rpx solid #EFF1F5;
}

.rule-item {
  display: flex;
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: #444;
  line-height: 1.5;
  align-items: flex-start;
}

.rule-item:last-child {
  margin-bottom: 0;
}

.rule-dot {
  min-width: 12rpx;
  height: 12rpx;
  background: #E3BF87;
  border-radius: 50%;
  margin-top: 12rpx;
  margin-right: 20rpx;
  box-shadow: 0 0 10rpx rgba(227, 191, 135, 0.4);
}

.dot-lv4 {
  background: #C69C6D; 
  transform: scale(1.2);
}

.rule-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.rule-title {
  color: #1A1A1A;
  font-weight: 500;
}

.gift-highlight {
  color: #C69C6D;
  font-size: 22rpx;
  font-weight: 500;
  margin-top: 8rpx;
}

.gift-row {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #666;
  flex-wrap: wrap;
}

.gift-row .tag {
  background: rgba(198, 156, 109, 0.1);
  color: #C69C6D;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.gift-row.special {
  margin-top: 16rpx;
}

.gift-row.special .tag {
  background: #1A1A1A;
  color: #E3BF87;
}

.gift-row.special .val {
  color: #1A1A1A;
  font-weight: 800;
  font-size: 24rpx;
}

.note-text {
  color: #999;
  font-size: 20rpx;
  margin-top: 32rpx;
  padding-left: 32rpx;
}

.fixed-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 48rpx 60rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.primary-btn {
  background: #1A1A1A;
  color: #E3BF87;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
  letter-spacing: 2rpx;
}

.primary-btn:active {
  transform: scale(0.98);
}
