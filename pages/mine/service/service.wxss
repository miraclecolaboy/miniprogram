/* 复用核心变量 */
page {
  --bg-page: #F7F8FA;
  --card-bg: #FFFFFF;
  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --text-light: #C5C6CB;
  --gold: #BFA15F;
  --green: #34C759;
  
  /* 阴影：更细腻的层级 */
  --shadow-base: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
  --shadow-float: 0 16rpx 40rpx rgba(0, 0, 0, 0.06);
  
  background: var(--bg-page);
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  box-sizing: border-box;
  padding: 0 32rpx 60rpx;
}

/* --- 1. Header --- */
.header-area {
  padding: 40rpx 0 32rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-en {
  font-size: 20rpx;
  font-weight: 800;
  color: var(--text-light);
  letter-spacing: 2rpx;
  margin-bottom: 4rpx;
}
.title-cn {
  font-size: 48rpx;
  font-weight: 900;
  color: var(--text-main);
  letter-spacing: -1rpx;
}
/* 顶部光晕装饰 */
.header-glow {
  position: absolute;
  top: -60rpx; right: -40rpx;
  width: 200rpx; height: 200rpx;
  background: radial-gradient(circle, rgba(191,161,95,0.12) 0%, transparent 70%);
  filter: blur(40rpx);
  z-index: -1;
}

/* --- 2. 核心矩阵布局 (左1右2) --- */
.dashboard-grid {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 460rpx; /* 固定总高度 */
  margin-bottom: 48rpx;
}

/* 左侧大卡 (微信) */
.grid-col-left {
  width: 48%;
  height: 100%;
  background: var(--card-bg);
  border-radius: 32rpx;
  box-shadow: var(--shadow-base);
  overflow: hidden;
}

.card-inner {
  height: 100%; padding: 32rpx;
  display: flex; flex-direction: column;
  box-sizing: border-box;
}

.wx-bg-gradient {
  background: linear-gradient(160deg, #FFFFFF 0%, #F0FDF4 100%); /* 极淡绿渐变 */
  background: linear-gradient(160deg, #FFFFFF 0%, #FEF9F0 100%); /* 极淡金渐变 */
}

.card-top { display: flex; justify-content: space-between; align-items: flex-start; }
.live-tag {
  display: flex; align-items: center;
  font-size: 20rpx; color: var(--green);
  background: rgba(52, 199, 89, 0.08); padding: 6rpx 12rpx; border-radius: 20rpx; font-weight: 600;
}
.live-dot { width: 10rpx; height: 10rpx; background: var(--green); border-radius: 50%; margin-right: 6rpx; box-shadow: 0 0 8rpx rgba(52, 199, 89, 0.4); }

/* 大二维码区域 */
.qr-area-large {
  flex: 1;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  margin: 10rpx 0;
}
.qr-frame {
  width: 180rpx; height: 180rpx;
  padding: 10rpx; background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.04);
}
.real-qr-large { width: 100%; height: 100%; }
.qr-tip { font-size: 20rpx; color: var(--text-light); margin-top: 16rpx; }

/* 底部文字 */
.card-bottom-area { text-align: center; }
.wx-label { font-size: 30rpx; font-weight: 700; color: var(--text-main); margin-bottom: 4rpx; }
.wx-sub { font-size: 20rpx; color: var(--text-sub); }

/* --- 右侧列 (电话+时间) --- */
.grid-col-right {
  width: 48%;
  height: 100%;
  display: flex; flex-direction: column; justify-content: space-between;
}

/* 小卡片通用 */
.small-card {
  width: 100%;
  height: 218rpx; /* (460 - 24gap) / 2 */
  background: var(--card-bg);
  border-radius: 32rpx;
  box-shadow: var(--shadow-base);
  padding: 24rpx;
  box-sizing: border-box;
  display: flex; flex-direction: column;
}

.row-between { display: flex; justify-content: space-between; align-items: flex-start; width: 100%; }
.info-col { display: flex; flex-direction: column; }
.card-label { font-size: 28rpx; font-weight: 700; color: var(--text-main); margin-bottom: 4rpx; }
.card-sub { font-size: 20rpx; color: var(--text-light); font-weight: 500; }

/* 电话卡特有样式 */
.phone-card-small { justify-content: space-between; }
.phone-bottom {
  display: flex; justify-content: space-between; align-items: center;
  margin-top: 10rpx;
}
.phone-num-sm {
  font-size: 32rpx; font-weight: 800; color: var(--text-main);
  /* 防止号码太长换行 */
  white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 180rpx;
}
.btn-call {
  height: 56rpx;
  padding: 0 24rpx;
  background: #1D1D1F;
  border-radius: 999rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 24rpx;
  font-weight: 800;
  color: #FFFFFF;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.12s ease, box-shadow 0.12s ease, filter 0.12s ease;
}
.btn-call--hover {
  transform: scale(0.92);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  filter: brightness(0.98);
}

/* 时间卡特有样式 */
.time-card { justify-content: space-between; }
.time-txt {
  font-size: 30rpx; font-weight: 700; color: var(--text-main);
  align-self: flex-start; margin-top: auto;
  line-height: 1.25;
}
.time-line + .time-line { margin-top: 8rpx; }

/* --- 3. FAQ Section (问答版) --- */
.section-header {
  font-size: 28rpx; font-weight: 800; color: var(--text-main);
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.faq-card {
  background: var(--card-bg);
  border-radius: 32rpx;
  box-shadow: var(--shadow-base);
  padding: 0 32rpx;
}

.faq-item {
  padding: 32rpx 0;
}

.q-row {
  display: flex; align-items: flex-start; gap: 12rpx;
  margin-bottom: 12rpx;
}
.q-icon {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 24rpx; font-weight: 800; color: var(--gold);
  background: rgba(191, 161, 95, 0.1);
  padding: 2rpx 8rpx; border-radius: 6rpx;
  margin-top: 4rpx;
}
.q-text {
  font-size: 28rpx; font-weight: 700; color: var(--text-main);
  line-height: 1.4;
}

.a-row {
  padding-left: 50rpx; /* 对齐问题文字 */
}
.a-text {
  font-size: 26rpx; color: var(--text-sub);
  line-height: 1.6;
  text-align: justify;
}

.divider {
  height: 1rpx;
  background: #F0F0F0;
  width: 100%;
}

/* 公共工具类 */
.din-font { font-family: 'DIN Alternate', sans-serif; }
.icon-halo {
  width: 80rpx; height: 80rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
}
.scale-small { width: 56rpx; height: 56rpx; }
.scale-sm { width: 64rpx; height: 64rpx; }
.card-icon { width: 40rpx; height: 40rpx; }
.bg-gold-light { background: rgba(52, 199, 89, 0.1); }
.bg-green-light { background: rgba(191, 161, 95, 0.1); }
.bg-blue-light { background: rgba(0, 122, 255, 0.06); }
.card-hover { transform: scale(0.98); transition: transform 0.1s; }
