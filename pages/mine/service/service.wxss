.page{
  min-height:100vh;
  background:#F6F7F9;
  padding:24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing:border-box;
  display:flex;
  flex-direction:column;
  gap:16rpx;
}
.card{
  background:#fff;
  border-radius:20rpx;
  box-shadow:0 10rpx 26rpx rgba(0,0,0,0.04);
}
.header{ padding:26rpx; }
.title{ font-size:32rpx; font-weight:800; color:#111; }
.sub{ margin-top:10rpx; font-size:22rpx; color:#6B7280; line-height:1.6; }

.section-title{ font-size:26rpx; font-weight:800; color:#111; }

.qr-card{ padding:22rpx 24rpx; }
.qr-wrap{
  margin-top:16rpx;
  border-radius:16rpx;
  background:#F7F8FA;
  padding:18rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.qr-img{ width:360rpx; height:360rpx; }
.qr-tip{ margin-top:14rpx; font-size:22rpx; color:#9CA3AF; line-height:1.6; }

.phone-card{ padding:22rpx 24rpx; }
.phone-row{ margin-top:14rpx; display:flex; justify-content:space-between; gap:16rpx; align-items:center; }
.phone{ font-size:30rpx; font-weight:900; color:#111; }
.phone-sub{ margin-top:8rpx; font-size:22rpx; color:#9CA3AF; }
.phone-actions{ display:flex; gap:12rpx; }
.btn{
  height:64rpx;
  padding:0 18rpx;
  border-radius:14rpx;
  background:#111;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:24rpx;
  font-weight:700;
}
.ghost{
  background:#F7F7F7;
  color:#111;
  border:1rpx solid #F0F0F0;
}

.note{ padding:22rpx 24rpx; }
.note-line{ margin-top:10rpx; font-size:24rpx; color:#444; line-height:1.8; }
