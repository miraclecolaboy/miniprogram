/* pages/points/points.wxss */

page {
  /* 变量系统 */
  --bg-page: #F7F8FA;
  --bg-card: #FFFFFF;
  --text-main: #1D1D1F;
  --text-sub: #86909C; 
  --black: #1A1A1A;
  
  background-color: var(--bg-page);
  min-height: 100vh;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  box-sizing: border-box;
}

/* === 1. 顶部资产面板 (极简纯净版) === */
.header-board {
  background: #FFFFFF;
  margin: 24rpx;
  /* 上下留白多一点，左右适中 */
  padding: 48rpx 40rpx; 
  border-radius: 24rpx;
  /* 极轻微的阴影，几乎不可见，只为了让它浮起来一点点 */
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02); 
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 左对齐 */
}

.header-label {
  font-size: 26rpx;
  color: var(--text-sub);
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.header-num-box {
  display: flex;
  align-items: baseline;
  line-height: 1;
}

/* 纯数字展示，去除所有装饰 */
.header-num {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 72rpx; 
  font-weight: 900;
  color: var(--black);
  letter-spacing: -2rpx;
}

/* === 通用容器 === */
.section-container {
  padding: 10rpx 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

/* === 2. 礼品卡片 === */
.gift-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  /* 几乎无边框，靠极淡的阴影 */
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.02);
}

.gift-img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 12rpx;
  background: #F7F8FA;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.gift-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 130rpx;
}

.gift-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gift-desc {
  font-size: 22rpx;
  color: var(--text-sub);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 380rpx;
}

.gift-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.gift-price-line {
  display: flex;
  align-items: baseline;
}

.gift-points {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 36rpx;
  font-weight: 800;
  color: var(--black);
}

.gift-unit {
  font-size: 22rpx;
  color: var(--text-main);
  margin-left: 4rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

/* 库存：极简灰 */
.gift-stock {
  font-size: 22rpx;
  color: var(--text-sub);
  font-weight: 400;
  position: relative;
  padding-left: 16rpx;
}
.gift-stock::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 16rpx;
  background: #E5E6EB;
}

/* 按钮：黑底白字 */
.btn-redeem {
  padding: 0 30rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: var(--black);
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.btn-redeem:active {
  transform: scale(0.96);
  opacity: 0.9;
}

.btn-redeem.disabled {
  background: #F2F3F5;
  color: #CCC;
  box-shadow: none;
  pointer-events: none;
}

/* === 3. 我的兑换码 === */
.voucher-ticket {
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  height: 150rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.02);
  border: 1rpx solid rgba(0,0,0,0.02);
}

.voucher-left {
  flex: 1;
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.v-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.v-time {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-bottom: 6rpx;
}

.v-code-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.v-label { color: var(--text-sub); }
.v-code { 
  font-family: monospace; 
  font-weight: 700; 
  color: var(--text-main); 
  letter-spacing: 1rpx; 
}

/* 分割线 */
.voucher-split {
  width: 2rpx;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.split-line {
  width: 0;
  height: 60%;
  border-left: 2rpx dashed #F0F0F0;
}
.circle-top, .circle-bottom {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 24rpx;
  background-color: var(--bg-page);
  border-radius: 50%;
  box-shadow: inset 0 1rpx 2rpx rgba(0,0,0,0.03);
}
.circle-top { top: -12rpx; }
.circle-bottom { bottom: -12rpx; }

/* 右侧按钮 */
.voucher-right {
  width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-copy {
  padding: 0 24rpx;
  height: 48rpx;
  line-height: 46rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-main);
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #CCC;
  font-size: 24rpx;
}