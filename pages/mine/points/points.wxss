.page{
  min-height:100vh;
  background:#F6F7F9;
  padding:24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing:border-box;
  display:flex;
  flex-direction:column;
  gap:16rpx;
}
.card{
  background:#fff;
  border-radius:20rpx;
  box-shadow:0 10rpx 26rpx rgba(0,0,0,0.04);
}
.header{ padding:26rpx; }
.title{ font-size:30rpx; font-weight:800; color:#111; line-height:1.2; }

.sub{ margin-top:10rpx; font-size:24rpx; color:#6B7280; }
.strong{ font-weight:900; color:#111; }

.list{ padding:22rpx 24rpx; }
.history{ padding:22rpx 24rpx; }

.section-title{
  font-size:26rpx;
  font-weight:800;
  color:#111;
  margin-bottom:16rpx;
}

.gift{
  display:flex;
  justify-content:space-between;
  gap:0;
  padding:18rpx 0;
  border-top:1rpx solid #F0F0F0;
  align-items:flex-start; 
}

.gift-left{
  flex: 1;
  min-width: 0;
}

.gift-right{
  flex-shrink: 0;
  display: flex;
  align-items: center;
  align-self: center; 
}

.gift:first-of-type{ border-top:none; }
.gift-left{
  flex: 1;
  min-width: 0;
}

.gift-name{ font-size:28rpx; font-weight:800; color:#111; }
.gift-need{ margin-top:8rpx; font-size:24rpx; color:#444; }
.gift-stock{
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #444;
}
.gift-desc{ margin-top:4rpx; font-size:22rpx; color:#6B7280; line-height:1.5; }

.btn{
  min-width:160rpx;
  height:64rpx;
  border-radius:14rpx;
  background:#111;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:24rpx;
  font-weight:700;
}
.btn-disabled{
  background:#E5E7EB;
  color:#9CA3AF;
}

.empty{ padding:18rpx 0; font-size:24rpx; color:#9CA3AF; }

.record{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:18rpx 0;
  border-top:1rpx solid #F0F0F0;
}
.record:first-of-type{ border-top:none; }

.r-name{ font-size:26rpx; font-weight:700; color:#111; }
.r-time{ margin-top:8rpx; font-size:22rpx; color:#9CA3AF; }
.r-right{ font-size:24rpx; color:#111; font-weight:800; }

.gift-img{
  width: 114rpx;
  height: 114rpx;
  border-radius: 16rpx;
  background: #F3F4F6;
  flex-shrink: 0;
  margin-right: 32rpx;
}
/* ===== 兑换说明 ===== */
.notice-text{
  margin-top: 10rpx;
  font-size:24rpx;
  color:#374151;
  line-height:1.6;
  white-space:pre-wrap;
}

/* ===== 我的兑换码（补齐 points.wxml 使用的 voucher-* 样式）===== */
.voucher{
  display:flex;
  justify-content:space-between;
  gap:16rpx;
  padding:18rpx 0;
  border-top:1rpx solid #F0F0F0;
  align-items: center; 
}
.voucher:first-of-type{ border-top:none; }

.voucher-left{
  flex:1;
  min-width:0;
}
.voucher-name{ font-size:26rpx; font-weight:700; color:#111; }
.voucher-sub{ margin-top:8rpx; font-size:22rpx; color:#9CA3AF; }
.voucher-code{ margin-top:10rpx; font-size:24rpx; color:#111; font-weight:800; }

.voucher-right{
  display:flex;
  align-items:center;
}
.voucher-status{
  font-size:22rpx;
  padding:10rpx 16rpx;
  border-radius:12rpx;

  background:#F7F7F7;
  border:1rpx solid #F0F0F0;
  /* color:#111; */
  /* font-weight:700; */
}
.voucher-status.used{
  background:#E5E7EB;
  color:#9CA3AF;
}
