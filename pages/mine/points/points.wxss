/* pages/points/points.wxss */

page {
  /* === 全局变量 (保持与 recharge.wxss 一致) === */
  --bg-page: #F9FAFC;   
  --text-main: #1D1D1F; 
  --text-sub: #8C8883;  
  --gold-main: #C7AB85; 
  --gold-light: #FFF4E3;
  --black: #1A1A1A;     
  
  background-color: var(--bg-page);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  box-sizing: border-box;
  height: 100vh;
  overflow: hidden; /* Use inner scroll-view to avoid page scrollbar. */
  padding-bottom: 0;
  color: var(--text-main);
}

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* ============================
   1. 头部资产区域 (复用 Recharge 样式)
   ============================ */
.header-section {
  padding: 32rpx 32rpx 8rpx;
  margin-bottom: 24rpx;
}

.asset-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FBF7F2 100%);
  border-radius: 32rpx;
  padding: 44rpx 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 30rpx 60rpx rgba(199, 171, 133, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

/* POINTS 水印：居中更均匀（清晰但极淡） */
.card-decoration {
  position: absolute;
  top: 50%;
  left: 50%;
  /* 居中 + 轻微旋转 */
  transform: translate(-50%, -50%) rotate(-10deg);
  font-family: 'Didot', 'Times New Roman', serif; 
  font-size: 130rpx; 
  color: rgba(199, 171, 133, 0.05); 
  font-weight: 700;
  pointer-events: none;
  z-index: 0;
  letter-spacing: 12rpx; 
  white-space: nowrap;   
}

.card-content { position: relative; z-index: 1; }

.card-top {
  display: flex; justify-content: center; align-items: center;
  margin-bottom: 28rpx;
}

/* 双语标签组 */
.label-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.card-label-zh {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 700;
  margin-bottom: 6rpx;
  letter-spacing: 1rpx;
}

.card-label-en {
  font-size: 18rpx;
  color: #B08D55; /* 深金色 */
  font-weight: 600;
  letter-spacing: 3rpx; 
  text-transform: uppercase;
  opacity: 0.9;
}

.balance-row { 
  display: flex; 
  align-items: baseline; 
  justify-content: center;
}

.balance-num {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 62rpx; font-weight: 800; color: var(--text-main);
  letter-spacing: -2rpx; line-height: 1;
  background: linear-gradient(180deg, #1D1D1F 20%, #4A4A4A 100%);
  -webkit-background-clip: text; -webkit-text-fill-color: transparent; 
}

.symbol-unit {
  font-size: 32rpx; font-weight: 700; color: #B08D55;
  margin-left: 16rpx; font-family: 'DIN Alternate', sans-serif;
  transform: translateY(-8rpx); /* 微调对齐 */
}

.btn-history {
  margin-left: 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 24rpx;
  background: var(--black);
  color: #FFFFFF;
  font-size: 22rpx;
  border-radius: 24rpx;
  font-weight: 600;
  transform: translateY(-10rpx);
}

/* ============================
   2. 内容区域 (列表)
   ============================ */
.section-wrap { padding: 0 32rpx; }

.section-header {
  display: flex; align-items: center;
  margin-bottom: 32rpx; padding-left: 8rpx;
}

.section-title {
  font-size: 28rpx; font-weight: 700; color: var(--text-main);
  margin-right: 16rpx;
}

.section-tag {
  font-size: 20rpx; background: var(--gold-light); color: #B08D55;
  padding: 4rpx 12rpx; border-radius: 8rpx; font-weight: 700; letter-spacing: 1rpx;
}

/* === 礼品卡片 (升级圆角和阴影) === */
.gift-card {
  background: #FFFFFF;
  border-radius: 32rpx; /* 与充值页一致 */
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.02); /* 空气阴影 */
  border: 2rpx solid transparent;
  transition: transform 0.1s;
}
.gift-card:active { transform: scale(0.99); }

.gift-img {
  width: 140rpx; height: 140rpx;
  border-radius: 20rpx;
  background: #eee;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-right: 24rpx;
  flex-shrink: 0;
}
.gift-img-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #B6BAC2;
  font-size: 22rpx;
}

.gift-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 140rpx;
}

.gift-name {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 6rpx;
  white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
  max-width: 400rpx;
}

.gift-desc {
  font-size: 24rpx;
  color: var(--text-sub);
  white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
  max-width: 400rpx;
}

.gift-bottom {
  display: flex; justify-content: space-between; align-items: flex-end;
}

.gift-price-line { display: flex; align-items: baseline; }

.gift-points {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 40rpx; font-weight: 800; color: var(--text-main);
  line-height: 1;
}

.gift-unit {
  font-size: 22rpx; color: var(--text-sub);
  margin-left: 8rpx; font-weight: 600;
}

/* 兑换按钮：保持黑色药丸形状 */
.btn-redeem {
  padding: 0 32rpx;
  height: 60rpx; line-height: 60rpx;
  background: var(--text-main);
  color: #FFFFFF;
  font-size: 24rpx; font-weight: 600;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}
.btn-redeem.disabled {
  background: #F0F2F5; color: #CCC; box-shadow: none;
}

/* === 兑换券卡片 (升级风格) === */
.voucher-ticket {
  background: #FFFFFF;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  height: 160rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.02);
  border: 1rpx solid rgba(0,0,0,0.02);
}

.voucher-left {
  flex: 1; padding: 0 32rpx;
  display: flex; flex-direction: column; justify-content: center;
}

.v-name {
  font-size: 30rpx; font-weight: 700; color: var(--text-main);
  margin-bottom: 8rpx;
}

.v-time { font-size: 22rpx; color: var(--text-sub); margin-bottom: 8rpx; }

.v-code-row { display: flex; align-items: center; font-size: 24rpx; }
.v-label { color: var(--text-sub); }
.v-code { 
  font-family: 'DIN Alternate', monospace; 
  font-weight: 700; color: var(--black); 
  letter-spacing: 1rpx; font-size: 28rpx;
}

/* 分割线优化 */
.voucher-split {
  width: 2rpx; height: 100%; position: relative;
  display: flex; align-items: center; justify-content: center;
}
.split-line {
  width: 0; height: 60%;
  border-left: 4rpx dotted #F0F0F0;
}
.circle-top, .circle-bottom {
  position: absolute; left: 50%; transform: translateX(-50%);
  width: 30rpx; height: 30rpx;
  background-color: var(--bg-page);
  border-radius: 50%;
}
.circle-top { top: -15rpx; }
.circle-bottom { bottom: -15rpx; }

/* 复制按钮 */
.voucher-right {
  width: 140rpx;
  display: flex; align-items: center; justify-content: center;
}
.btn-copy {
  padding: 0 24rpx; height: 52rpx; line-height: 50rpx;
  border: 2rpx solid #E0E0E0; border-radius: 26rpx;
  font-size: 22rpx; font-weight: 600; color: var(--text-main);
}

.empty-state {
  text-align: center; padding: 100rpx 0; color: #CCC; font-size: 26rpx;
}
