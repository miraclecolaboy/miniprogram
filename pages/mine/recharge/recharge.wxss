.page{
  min-height:100vh;
  background:#F6F7F9;
  padding:24rpx;
  box-sizing:border-box;
}
/* ===== 当前余额 ===== */
.balance-card{
  margin-bottom:24rpx;
  padding:24rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.balance-label{
  font-size:28rpx;
  color:#666;
  font-weight:500;
}

.balance-value{
  font-size:34rpx;
  font-weight:700;
  color:#111;
}

.card{
  background:#fff;
  border-radius:20rpx;
}

/* ===== 金额选择 ===== */
.amount-card{
  padding:24rpx;
}

.amount-header{
  margin-bottom:20rpx;
}

.amount-header-row{
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.amount-query{
  font-size:24rpx;
  color:#000000;
}


.amount-title{
  font-size:28rpx;
  font-weight:700;
}

.amount-tip{
  font-size:22rpx;
  color:#666;
}

.amount-grid{
  display:flex;
  flex-wrap:wrap;
  gap:16rpx;
}

.amount-item{
  flex: 0 0 calc((100% - 32rpx) / 3);
  max-width: calc((100% - 32rpx) / 3);
  height:96rpx;
  border-radius:16rpx;
  background:#F3F4F6;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:30rpx;
  font-weight:700;
  color:#111;
  box-sizing:border-box;
}

.amount-item.active{
  background:#111;
  color:#fff;
}

.amount-item.custom{
  padding:0;
}

.custom-input{
  width:100%;
  height:100%;
  text-align:center;
  font-size:26rpx;
  border:none;
}

/* ===== 明细 ===== */
.record-card{
  margin-top:24rpx;
  padding:24rpx;
}

.record-title{
  font-size:28rpx;
  font-weight:700;
  margin-bottom:16rpx;
}

.record-item{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:18rpx 0;
  border-bottom:1rpx solid #eee;
}

.record-left{
  display:flex;
  flex-direction:column;
}

.record-type{
  font-size:26rpx;
  color:#111;
}

.record-time{
  margin-top:6rpx;
  font-size:22rpx;
  color:#999;
}

.record-amount{
  font-size:28rpx;
  font-weight:700;
}

/* .plus{ color:#16A34A; }
.minus{ color:#DC2626; } */

.empty{
  text-align:center;
  padding:40rpx 0;
  font-size:24rpx;
  color:#999;
}

/* ===== 底部按钮 ===== */
.footer{
  margin-top:32rpx;
}

.primary-btn{
  height:96rpx;
  background:#111;
  color:#fff;
  border-radius:20rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:30rpx;
  font-weight:700;
}
.amount-tip{
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(50rpx + env(safe-area-inset-bottom));
  text-align: center;
  z-index: 9;
}

/* ===== 复用 order 规格弹窗（spec）===== */
.spec-mask {
  position: fixed;
  inset: 0;
  background-color: rgba(0,0,0,0.35);
  z-index: 500;
}

.spec-popup {
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  bottom: 30vh;
  background-color: #fff;

  border-radius: 24rpx;
  box-shadow: 0 -12rpx 40rpx rgba(0,0,0,0.15);

  z-index: 600;
  padding: 26rpx 26rpx 32rpx;

  height: 50vh;
max-height: 50vh;
overflow: hidden;

  
  display: flex;
  flex-direction: column;
}

.spec-scroll {
  flex: 1;
  overflow-y: scroll;
  padding-right: 10rpx;
}

/* 弹窗头部tab */
.log-header{ padding-bottom:16rpx; }
.log-title{ font-size:30rpx; font-weight:700; }
.log-tabs{ display:flex; align-items:center; margin-top:16rpx; }
.log-tab{
  padding:10rpx 18rpx;
  border-radius:999rpx;
  background:#F2F3F5;
  font-size:24rpx;
  margin-right:12rpx;
}
.log-tab.active{
  background:#111;
  color:#fff;
}
