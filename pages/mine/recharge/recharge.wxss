/* pages/recharge/recharge.wxss */

page {
  /* 统一设计语言 */
  --bg-page: #F7F8FA;
  --bg-card: #FFFFFF;
  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --black: #1A1A1A;
  --gold: #CFAA5E;
  
  background-color: var(--bg-page);
  min-height: 100vh;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  padding-bottom: 180rpx;
}

/* === 1. 资产卡片 === */
.asset-card {
  margin: 24rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03);
}

.asset-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.asset-label {
  font-size: 26rpx;
  color: var(--text-sub);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.log-btn {
  display: flex;
  align-items: center;
  background: #F7F8FA;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  color: var(--text-main);
  font-weight: 600;
}
.log-btn .arrow {
  margin-left: 8rpx;
  font-size: 28rpx;
  margin-top: -4rpx;
  color: #999;
  font-family: monospace;
}

.asset-main {
  display: flex;
  align-items: baseline;
  line-height: 1;
}

.currency {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--black);
  margin-right: 6rpx;
  transform: translateY(-2rpx);
}

.balance-num {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 60rpx;
  font-weight: 800;
  color: var(--black);
  letter-spacing: -1rpx;
}

/* === 2. 充值区域 === */
.amount-section {
  padding: 10rpx 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

/* Grid：双列布局 */
.amount-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.amount-item {
  width: 48%;
  /* 核心修改：高度压扁，更像按钮 */
  height: 100rpx; 
  background: #FFFFFF;
  border-radius: 20rpx; /* 圆角稍微收一点 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.02);
  border: 2rpx solid transparent;
  transition: all 0.2s;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.amount-item .num {
  font-family: 'DIN Alternate', sans-serif;
  /* 核心修改：字号缩小 */
  font-size: 36rpx; 
  font-weight: 700;
  color: var(--text-main);
}

/* 选中态 */
.amount-item.active {
  background: var(--black);
  border-color: var(--black);
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.15);
}

.amount-item.active .num { color: #FFFFFF; }

/* 自定义金额 */
.custom-row {
  width: 100%;
  /* 高度同步压扁 */
  height: 100rpx; 
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.02);
  transition: all 0.2s;
}

.custom-row.active {
  border-color: var(--black);
  background: #FDFDFD;
}

.custom-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.custom-input-box {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.custom-input {
  width: 200rpx;
  height: 100%;
  text-align: right;
  font-size: 30rpx;
  font-weight: 700;
  color: var(--black);
}

.ph-style {
  color: #C5C6CB;
  font-size: 28rpx;
  font-weight: 400;
}

.custom-unit {
  font-size: 24rpx;
  color: var(--text-main);
  font-weight: 500;
  margin-left: 8rpx;
}

/* === 3. 底部悬浮按钮 === */
.fixed-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -8rpx 30rpx rgba(0,0,0,0.04);
  z-index: 100;
}

.pay-btn {
  height: 96rpx;
  background: var(--black);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.15);
  transition: transform 0.1s;
}
.pay-btn:active { transform: scale(0.98); }

/* === 4. 弹窗样式 === */
.spec-mask {
  position: fixed; inset: 0; background: rgba(0,0,0,0.5); z-index: 500; backdrop-filter: blur(4px);
}
.spec-popup {
  position: fixed; left: 0; right: 0; bottom: 0;
  background: #FFFFFF;
  border-top-left-radius: 32rpx; border-top-right-radius: 32rpx;
  z-index: 600;
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  height: 75vh;
  display: flex; flex-direction: column;
  animation: slideUp 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}
@keyframes slideUp { from { transform: translateY(100%); } to { transform: translateY(0); } }

.log-header { flex-shrink: 0; margin-bottom: 24rpx; }
.log-title { font-size: 34rpx; font-weight: 800; margin-bottom: 24rpx; text-align: center; }

.log-tabs { display: flex; justify-content: center; gap: 16rpx; }
.log-tab {
  padding: 10rpx 32rpx;
  border-radius: 999rpx;
  background: #F5F6F8;
  color: var(--text-sub);
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s;
}
.log-tab.active { background: var(--black); color: #FFFFFF; }

.spec-scroll {
  flex: 1;
  height: 0;
  overflow-y: auto;
}

.record-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 28rpx 0; border-bottom: 1rpx solid #F5F6F8;
}
.record-type { font-size: 28rpx; font-weight: 700; color: var(--text-main); }
.record-time { font-size: 22rpx; color: var(--text-sub); margin-top: 6rpx; }

.record-amount {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--black);
}
.record-amount.plus { color: #CFAA5E; }

.empty-state {
  text-align: center; padding: 100rpx 0; color: #CCC; font-size: 26rpx;
}