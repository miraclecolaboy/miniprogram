.page{
  min-height:100vh;
  background:#F6F7F9;
  padding:24rpx;
  box-sizing:border-box;
}

.card{
  background:#fff;
  border-radius:20rpx;
}

/* 地址卡片 */
.address-card{
  display:flex;
  padding:24rpx;
  margin-bottom:20rpx;
}

/* 左侧内容 */
.addr-content{
  flex:1;
  padding-right:20rpx;
}

.addr-top{
  display:flex;
  align-items:center;
  flex-wrap:wrap;
}

.addr-name{
  font-size:28rpx;
  font-weight:700;
  margin-right:16rpx;
}

.addr-phone{
  font-size:26rpx;
  color:#666;
}

.addr-tag{
  margin-left:12rpx;
  font-size:20rpx;
  color:#fff;
  background:#111;
  padding:4rpx 10rpx;
  border-radius:6rpx;
}

.addr-detail{
  margin-top:10rpx;
  font-size:26rpx;
  color:#333;
  line-height:1.5;
}

/* 右侧操作区 */
/* 右侧操作区：整体弱化 */
.addr-ops{
  width:88rpx;
  display:flex;
  flex-direction:column;
  justify-content:center;
  gap:12rpx;
}

/* 单个操作 */
.op-btn{
  height:60rpx;            
  border-radius:16rpx;     
  background:#fff;          
  border:2rpx solid #FCA5A5; 

  display:flex;
  align-items:center;
  justify-content:center;

  font-size:26rpx;          
  color:#DC2626;            
  font-weight:500;

  box-sizing:border-box;
}

.op-btn:active{
  background:#E5E7EB;
}


/* 底部 */
.footer{
  margin-top:32rpx;
}

.primary-btn{
  height:96rpx;
  background:#111;
  color:#fff;
  border-radius:20rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:30rpx;
  font-weight:700;
}

/* 空状态 */
.empty{
  text-align:center;
  padding:80rpx 0;
  font-size:26rpx;
  color:#999;
}

.op-default{
  border-color:#111 !important;
  color:#111 !important;
}
