/* page 基础样式 */
.page {
  min-height: 100vh;
  background-color: #F8F8F8;
  /* 原 padding: 24rpx; */
  /* 【修改】增加底部 padding，为页脚图片留出空间 */
  padding: 24rpx 24rpx 24rpx;
  box-sizing: border-box;
  position: relative;
  overflow-x: hidden;
}


/* ======================================= */
/* 星空/炉火微光 CSS 实现 */
/* ======================================= */
.header-hero {
  background: radial-gradient(ellipse at bottom, #1B2735 0%, #090A0F 100%);
  border-radius: 28rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 0; 
}

/* 星星背景层 */
.stars { 
  position: absolute; 
  top: 0; left: 0; right: 0; bottom: 0; 
  z-index: 1; 
  background-size: 100% 100%;
  will-change: opacity; /* 性能优化 */
}

.stars1 { 
  background-image: radial-gradient(1px 1px at 10% 20%, #fff, transparent), radial-gradient(1px 1px at 40% 50%, #fff, transparent), radial-gradient(2px 2px at 80% 30%, #fff, transparent), radial-gradient(1px 1px at 90% 70%, #fff, transparent); 
  animation: sparkle 6s infinite alternate; 
}
.stars2 { 
  background-image: radial-gradient(1px 1px at 25% 90%, #fff, transparent), radial-gradient(2px 2px at 55% 60%, #fff, transparent), radial-gradient(1px 1px at 70% 95%, #fff, transparent), radial-gradient(1px 1px at 85% 10%, #fff, transparent); 
  animation: sparkle 8s infinite alternate; 
}
.stars3 { 
  background-image: radial-gradient(2px 2px at 5% 60%, #fff, transparent), radial-gradient(1px 1px at 50% 10%, #fff, transparent), radial-gradient(1px 1px at 65% 85%, #fff, transparent); 
  animation: sparkle 10s infinite alternate; 
}

@keyframes sparkle { 
  0% { opacity: 0; } 
  20% { opacity: 1; } 
  80% { opacity: 1; } 
  100% { opacity: 0; } 
}

/* 前景内容 */
.hero-content {
  position: relative;
  z-index: 2;
  padding: 32rpx 30rpx 40rpx;
  color: #fff;
}

.hero-user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hero-avatar-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2), inset 0 0 1px 1px rgba(255, 255, 255, 0.08);
  margin-bottom: 18rpx;
}

.hero-avatar-img { width: 100%; height: 100%; border-radius: 50%; }
.hero-avatar-text { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 48rpx; font-weight: 800; color: #E5E7EB; background: rgba(255, 255, 255, 0.1); border-radius: 50%; }

.hero-name { font-size: 32rpx; font-weight: 700; }
.hero-sub { margin-top: 8rpx; font-size: 24rpx; color: rgba(255, 255, 255, 0.6); }

.asset-strip {
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 32rpx; 
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 18rpx;
  padding: 16rpx 0;
}

.asset-strip-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 18rpx;
}
.asset-strip-value { font-size: 32rpx; font-weight: 700; }
.asset-strip-label {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  
  /* 【新增】让文字和箭头横向对齐 */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 小箭头样式 */
.asset-arrow {
  margin-left: 6rpx; /* 箭头和文字的间距 */
  font-size: 26rpx;  /* 箭头稍微大一点点，看着清楚 */
  line-height: 1;    /* 防止箭头位置偏上或偏下 */
  opacity: 0.8;      /* 稍微淡一点，不抢眼 */
  padding-bottom: 4rpx; /* 微调垂直位置，根据实际情况增减 */
}

.asset-strip-divider { width: 1rpx; height: 40rpx; background: rgba(255, 255, 255, 0.15); }

/* ================================= */
/* 会员卡片 (悬浮堆叠版) */
/* ================================= */
.vip-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  position: relative;
  z-index: 10; /* 确保层级高于头部背景 */
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  
  /* 【核心调整】 */
  /* 1. 负边距实现向上堆叠 */
  /* 2. 左右缩进 40rpx，比头部略窄 */
  margin: 30rpx 40rpx 30rpx; 
  
  /* 增加内边距提升呼吸感 */
  padding: 32rpx;
  
  /* 加深阴影，营造悬浮感 */
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.08);
}

.vip-bg { position: absolute; inset: 0; pointer-events: none; }
.vip-circle{
  position:absolute;
  border-radius:999rpx;
  background:#fff;
  opacity:0.14;
}
.c1 { width: 220rpx; height: 240rpx; right: -70rpx; top: -100rpx; }
.c2 { width: 160rpx; height: 140rpx; left: -65rpx; bottom: -65rpx; }

.vip-header { display: flex; justify-content: space-between; align-items: flex-start; position: relative; z-index: 2; }
.vip-footer { display: flex; justify-content: space-between; align-items: flex-end; margin-top: 40rpx; position: relative; z-index: 2; }

.vip-status { font-size: 30rpx; font-weight: bold; }
.vip-entry { display: flex; align-items: center; opacity: 0.8; font-size: 24rpx; }
.vip-entry .arrow { margin-left: 6rpx; font-size: 22rpx; }
.vip-benefit { font-size: 24rpx; font-weight: 500; opacity: 0.9; }
.vip-expire { font-size: 22rpx; opacity: 0.7; }


.vip-off {
  background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
  color: #111;
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.08);
}

.vip-on { background: #000000; color: #f9fafb;
/* 增加微弱边框增强实体感 */
border: 1rpx solid rgba(255, 255, 255, 0.15); 
box-shadow: 
  0 30rpx 60rpx -12rpx rgba(0, 0, 0, 0.5), /* 深色悬浮影 */
  inset 0 2rpx 2rpx rgba(255, 255, 255, 0.2); /* 顶部边缘高光 */
 }
.vip-on .vip-status, .vip-on .vip-benefit { color: #D1BFA6; }

/* ================================= */
/* 功能入口 (极简黑金胶囊版) */
/* ================================= */

.bottom-section {
  padding: 0rpx 24rpx 32rpx;
  margin: 0 -24rpx -24rpx;
  background: #F8F8F8;
  border-top: none;
}

/* 整体黑色胶囊 */
.action-capsule {
  display: flex;
  /* 背景：深空黑 */
  background: #111111; 
  /* 增加一点点光泽感（微弱渐变） */
  background-image: linear-gradient(180deg, #1C1C1E 0%, #000000 100%);
  
  border-radius: 32rpx;
  /* 深色投影 */
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  
  /* 恢复原本的紧凑布局 */
  padding: 0;
  gap: 0; 
  border: 1px solid rgba(255, 255, 255, 0.1); /* 微弱的描边提升质感 */
}

/* 按钮项 */
.page .action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 26rpx 0;
  
  /* 移除之前的独立背景 */
  background: transparent !important; 
  border-radius: 0;
}

/* 【关键】恢复分割线，并设为半透明白 */
.action-divider {
  display: block; /* 恢复显示 */
  width: 1rpx;
  height: 40rpx;
  align-self: center;
  background-color: rgba(255, 255, 255, 0.15); /* 淡淡的白线 */
}

/* 按下反馈 */
.item-hover-lift {
  opacity: 0.7;
}

/* 图标反白 */
.action-icon {
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 12rpx;
  /* 滤镜：黑转白 */
  filter: brightness(0) invert(1);
}

/* 文字：香槟金 / 米白 */
.action-text {
  font-size: 24rpx;
  color: #D1BFA6; /* 香槟金，比纯白更有高级感 */
  /* 如果喜欢纯白，可以用 color: rgba(255,255,255,0.9); */
  font-weight: 500;
  letter-spacing: 1rpx;
}



/* =========================
   资料弹窗 (保持不变)
   ========================= */
.spec-mask{ position: fixed; inset: 0; background-color: rgba(0,0,0,0.35); z-index: 500; }
.spec-popup{ position: fixed; left: 50rpx; right: 50rpx; top: 50%; transform: translateY(-50%); background: #FFFFFF; border-radius: 24rpx; box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.15); z-index: 501; padding: 32rpx; box-sizing: border-box; }
.spec-top{ display: flex; align-items: center; gap: 24rpx; }
.profile-avatar-wrap{ width: 120rpx; height: 120rpx; border-radius: 50%; background: #111; overflow: hidden; position: relative; flex: none; }
.profile-avatar-img{ width: 100%; height: 100%; }
.profile-avatar-ph{ font-size: 24rpx; color: #fff; text-align: center; }
.profile-avatar-btn{ position: absolute; inset: 0; opacity: 0; }
.spec-top-info{ flex: 1; }
.spec-top-title{ font-size: 32rpx; font-weight: bold; }
.spec-top-sub{ margin-top: 8rpx; font-size: 24rpx; color: #888; }
.profile-body{ margin-top: 32rpx; }
.profile-row{ display: flex; align-items: center; gap: 16rpx; background: #f7f7f7; border-radius: 16rpx; padding: 20rpx; }
.profile-label{ font-size: 28rpx; }
.profile-input{ flex: 1; font-size: 28rpx; }
.profile-bottom{ margin-top: 32rpx; display: flex; gap: 20rpx; }
.profile-btn{ flex: 1; height: 88rpx; line-height: 88rpx; border-radius: 18rpx; font-size: 30rpx; font-weight: 500; }
.profile-btn-cancel{ background: #f0f1f4; color: #333; }
.profile-btn-save{ background: #111; color: #fff; }
.profile-btn::after{ border: none; }
/* 页脚背景图 */
.footer-bg-img {
  display: block;
  width: 95%;
  margin: 50rpx auto 0;
  
  margin-top: -80rpx; 
  
  /* 保持您喜欢的视觉效果 */
  opacity: 0.1;
  mix-blend-mode: multiply;
  pointer-events: none;
}