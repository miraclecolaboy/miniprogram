/* pages/mine/mine.wxss */

/* ===================================
   变量定义
   =================================== */
   page {
    --bg-page: #F7F8FA;
    --card-bg: #FFFFFF;
    --text-main: #1D1D1F;
    --text-sub: #86909C;
    --text-light: #C5C6CB;
    --gold: #BFA15F;
    --black: #1A1A1A;
    
    --shadow-float: 0 20rpx 60rpx rgba(0, 0, 0, 0.06);
    --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  
    background-color: var(--bg-page);
    font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
    box-sizing: border-box;
    color: var(--text-main);
    min-height: 100vh;
    padding-bottom: 40rpx;
  }
  
  /* ===================================
     1. 头部用户信息
     =================================== */
  .user-header {
    padding: 40rpx 40rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .user-header.center {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16rpx;
    text-align: center;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .user-name {
    font-size: 48rpx;
    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 12rpx;
  }
  
  .user-sub {
    font-size: 24rpx;
    color: var(--text-sub);
    display: flex;
    align-items: center;
    background: rgba(0,0,0,0.04);
    padding: 6rpx 16rpx;
    border-radius: 999rpx;
  }
  
  .user-sub .arrow { margin-left: 6rpx; font-size: 20rpx; margin-top: -2rpx; }
  
  .user-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    background: #fff;
    border: 6rpx solid #fff;
    box-shadow: var(--shadow-card);
  }
  
  /* ===================================
     2. 会员权益卡 (Expandable Card)
     =================================== */
  .vip-card-wrap {
    padding: 0 32rpx;
    margin-top: 30rpx;
    position: relative;
    z-index: 1;
  }
  
  .vip-card {
    background: linear-gradient(145deg, #323232 0%, #1A1A1A 100%);
    border-radius: 40rpx;
    /* 初始高度 */
    height: 240rpx; 
    padding: 48rpx 44rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
    color: #E3BF87;
    box-shadow: 0 32rpx 72rpx -24rpx rgba(0, 0, 0, 0.4);
    border: 1rpx solid rgba(255,255,255,0.06);
    display: flex;
    flex-direction: column;
    
    /* 动画核心 */
    transition: height 0.4s cubic-bezier(0.25, 1, 0.5, 1);
  }
  
  /* 展开状态 */
  .vip-card.expanded {
    height: 360rpx; /* 展开后的高度 */
  }
  
  /* 纹理 */
  .vip-texture {
    position: absolute;
    top: -60%;
    right: -30%;
    width: 520rpx;
    height: 520rpx;
    background: radial-gradient(circle, rgba(227, 191, 135, 0.12) 0%, transparent 65%);
    border-radius: 50%;
    pointer-events: none;
  }
  
  .vip-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    position: relative;
    z-index: 2;
  }

  .vip-info { display: flex; flex-direction: column; }

  .vip-name {
    font-size: 30rpx;
    font-weight: 700;
    color: #fff;
    margin-bottom: 12rpx;
    letter-spacing: 0.5rpx;
  }

  .vip-tag {
    display: inline-block;
    background: linear-gradient(90deg, #E3BF87, #C69C6D);
    color: #1A1A1A;
    font-size: 20rpx;
    padding: 6rpx 20rpx;
    border-radius: 24rpx;
    font-weight: 700;
  }

  .vip-logo {
    font-size: 48rpx;
    opacity: 0.15;
    font-style: italic;
    font-weight: 900;
    color: #fff;
  }

  /* 展开区域 (成长值) */
  .vip-expand {
    margin-top: auto;
    opacity: 0;
    transform: translateY(12rpx);
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease 0.1s; /* 延迟一点显示 */
    position: relative;
    z-index: 2;
  }
  
  .vip-card.expanded .vip-expand {
    opacity: 1;
    transform: translateY(0);
    margin-top: auto;
    max-height: 220rpx;
  }

  .vip-progress-meta {
    font-size: 20rpx;
    color: rgba(255,255,255,0.8);
    display: flex;
    justify-content: space-between;
    margin-bottom: 14rpx;
    font-weight: 500;
  }

  .vip-progress-track {
    height: 10rpx;
    background: rgba(255,255,255,0.18);
    border-radius: 6rpx;
    overflow: hidden;
    margin-bottom: 14rpx;
  }

  .vip-progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #E3BF87, #F2E3C9);
    box-shadow: 0 0 20rpx rgba(227, 191, 135, 0.5);
    transition: width 0.3s ease;
  }

  .vip-next-tip {
    font-size: 18rpx;
    color: rgba(255,255,255,0.6);
  }

  .vip-actions {
    margin-top: 16rpx;
    display: flex;
    justify-content: flex-end;
  }

  .vip-action-btn {
    padding: 8rpx 22rpx;
    background: linear-gradient(90deg, #E3BF87, #C69C6D);
    color: #1A1A1A;
    font-weight: 700;
    border-radius: 999rpx;
    font-size: 20rpx;
  }
  
  /* 展开指示小箭头 */
  .expand-indicator {
    position: absolute;
    bottom: 10rpx; left: 0; right: 0;
    text-align: center;
    color: rgba(255,255,255,0.2);
  }

  .expand-indicator text { font-size: 28rpx; }
  .expand-indicator.rotate { transform: rotate(180deg); }
  
  
  /* ===================================
     3. 悬浮数据舱
     =================================== */
  .dashboard-section {
    padding: 0 32rpx;
    margin-top: -30rpx; /* 向上插入会员卡 */
    position: relative;
    z-index: 10;
    /* 如果会员卡展开，数据板会被顶下去，通过 transition 实现平滑 */
    transition: margin-top 0.4s;
  }

  .dashboard-section.card-expanded {
    margin-top: 24rpx;
  }
  
  /* 配合会员卡展开，如需让数据板也跟着动，通常不需要额外写，DOM流会自动推挤 */
  
  .data-board {
    background: linear-gradient(160deg, #FFFFFF 0%, #FDFDFD 100%);
    border-radius: 32rpx;
    box-shadow: var(--shadow-card);
    padding: 28rpx 0;
    display: flex;
    align-items: center;
    border: 1rpx solid #EFF1F5;
  }

  
  .data-item { flex: 1; display: flex; flex-direction: column; align-items: center; }
  .item-hover { opacity: 0.6; }
  
  .data-divider { width: 2rpx; height: 50rpx; background: rgba(0,0,0,0.06); }

  
  .data-num {
    font-family: 'DIN Alternate', sans-serif;
    font-size: 42rpx;
    font-weight: 800;
    color: var(--text-main);
    line-height: 1.1;
  }
  
  .data-label {
    font-size: 22rpx;
    color: var(--text-sub);
    margin-top: 8rpx;
    font-weight: 500;
  }
  
  /* ===================================
     4. 功能宫格 (Clean Icons)
     =================================== */
  .menu-section { padding: 40rpx 32rpx; }
  
  .menu-list {
    background: linear-gradient(160deg, #FFFFFF 0%, #FDFDFD 100%);
    border-radius: 32rpx;
    box-shadow: var(--shadow-card);
    padding: 8rpx 0;
  }

  .menu-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 22rpx 28rpx;
  }

  .menu-left {
    display: flex;
    align-items: center;
    gap: 12rpx;
  }

  .menu-divider {
    height: 2rpx;
    width: 86%;
    background: rgba(0,0,0,0.06);
    margin: 0 auto;
  }

  .menu-arrow {
    font-size: 26rpx;
    color: var(--text-light);
    margin-top: -2rpx;
  }

  .item-hover-scale { transform: scale(0.98); transition: transform 0.1s; }
  
  /* 图标容器：去掉背景色，保留尺寸占位 */
  .icon-wrap {
    width: 64rpx;
    height: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0;
    /* 之前有 background 和 border-radius，现在去掉 */
  }
  
  .menu-icon {
    width: 36rpx;
    height: 36rpx;
  }
  
  .menu-text {
    font-size: 22rpx;
    color: #333;
    font-weight: 500;
  }
  
  /* ===================================
     5. 弹窗样式 (复用保持不变)
     =================================== */
  .spec-mask { position: fixed; inset: 0; background-color: rgba(0,0,0,0.4); z-index: 500; backdrop-filter: blur(4px); }
  .spec-popup {
    position: fixed; left: 50rpx; right: 50rpx; top: 50%; transform: translateY(-50%);
    background: #FFFFFF; border-radius: 32rpx;
    box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15); z-index: 501;
    padding: 40rpx; box-sizing: border-box;
  }
  .spec-top { display: flex; align-items: center; gap: 24rpx; margin-bottom: 40rpx; }
  .profile-avatar-wrap { 
    width: 140rpx; height: 140rpx; border-radius: 50%; 
    background: #111; overflow: hidden; position: relative; 
    flex: none; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
  }
  .profile-avatar-img { width: 100%; height: 100%; }
  .profile-avatar-ph { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #fff; background: #333; }
  .profile-avatar-btn { position: absolute; inset: 0; opacity: 0; }
  .spec-top-info { flex: 1; }
  .spec-top-title { font-size: 36rpx; font-weight: 700; color: #111; }
  .spec-top-sub { margin-top: 8rpx; font-size: 24rpx; color: #888; }
  .profile-body { margin-bottom: 40rpx; }
  .profile-row { display: flex; align-items: center; gap: 20rpx; background: #F7F8FA; border-radius: 20rpx; padding: 24rpx 30rpx; }
  .profile-label { font-size: 28rpx; font-weight: 600; color: #333; }
  .profile-input { flex: 1; font-size: 28rpx; color: #111; }
  .profile-bottom { display: flex; gap: 24rpx; }
  .profile-btn { flex: 1; height: 88rpx; line-height: 88rpx; border-radius: 20rpx; font-size: 30rpx; font-weight: 600; margin: 0; }
  .profile-btn::after { border: none; }
  .profile-btn-cancel { background: #F2F2F2; color: #666; }
  .profile-btn-save { background: #111; color: #fff; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15); }
