/* pages/mine/mine.wxss */

/* ===================================
   变量定义
   =================================== */
   page {
    --bg-page: #F7F8FA;
    --card-bg: #FFFFFF;
    --text-main: #1D1D1F;
    --text-sub: #86909C;
    --gold: #BFA15F;
    --black: #1A1A1A;
    
    --shadow-float: 0 20rpx 60rpx rgba(0, 0, 0, 0.05);
    --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.02);
  
    background-color: var(--bg-page);
    font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
    box-sizing: border-box;
    color: var(--text-main);
    min-height: 100vh;
    padding-bottom: 40rpx;
  }
  
  /* ===================================
     1. 头部用户信息
     =================================== */
  .user-header {
    padding: 40rpx 40rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
  }
  
  .user-name {
    font-size: 52rpx;
    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 12rpx;
  }
  
  .user-sub {
    font-size: 26rpx;
    color: var(--text-sub);
    display: flex;
    align-items: center;
    background: rgba(0,0,0,0.04);
    padding: 6rpx 16rpx;
    border-radius: 999rpx;
    align-self: flex-start;
  }
  
  .user-sub .arrow { margin-left: 6rpx; font-size: 24rpx; margin-top: -2rpx; }
  
  .user-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    background: #fff;
    border: 6rpx solid #fff;
    box-shadow: var(--shadow-card);
  }
  
  /* ===================================
     2. 会员权益卡 (Expandable Card)
     =================================== */
  .vip-card-wrap {
    padding: 0 32rpx;
    margin-top: 30rpx;
    position: relative;
    z-index: 1;
  }
  
  .vip-card {
    background: linear-gradient(145deg, #2B2B2B 0%, #000000 100%);
    border-radius: 40rpx;
    /* 初始高度 */
    height: 340rpx; 
    padding: 40rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
    color: #fff;
    box-shadow: 0 24rpx 48rpx -12rpx rgba(0, 0, 0, 0.4);
    
    /* 动画核心 */
    transition: height 0.4s cubic-bezier(0.25, 1, 0.5, 1);
  }
  
  /* 展开状态 */
  .vip-card.expanded {
    height: 600rpx; /* 展开后的高度 */
  }
  
  /* 纹理 */
  .vip-texture {
    position: absolute;
    right: -60rpx;
    top: -80rpx;
    width: 300rpx;
    height: 300rpx;
    background: radial-gradient(circle, rgba(191, 161, 95, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }
  
  /* 卡片主体内容 */
  .vip-main-content {
    position: relative;
    z-index: 2;
    height: 260rpx; /* 固定高度，确保布局稳定 */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .vip-top { display: flex; justify-content: space-between; align-items: center; }
  
  .vip-title {
    font-size: 32rpx;
    font-weight: 700;
    color: var(--gold);
    display: flex; align-items: center; gap: 12rpx;
  }
  
  .vip-icon { width: 36rpx; height: 36rpx; }
  
  .vip-level {
    font-family: 'DIN Alternate', sans-serif;
    font-size: 48rpx;
    font-weight: bold;
    color: rgba(255,255,255,0.15);
    font-style: italic;
  }
  
  .vip-bottom { display: flex; justify-content: space-between; align-items: flex-end; }
  .vip-desc { font-size: 24rpx; color: rgba(255,255,255,0.6); margin-bottom: 8rpx; }
  
  .vip-btn {
    padding: 10rpx 28rpx;
    background: var(--gold);
    color: #000;
    font-weight: 600;
    border-radius: 999rpx;
    font-size: 24rpx;
  }
  
  /* 展开区域 (二维码) */
  .qrcode-area {
    margin-top: 20rpx;
    opacity: 0;
    transform: translateY(20rpx);
    transition: all 0.3s ease 0.1s; /* 延迟一点显示 */
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .vip-card.expanded .qrcode-area {
    opacity: 1;
    transform: translateY(0);
  }
  
  .qr-divider {
    width: 100%; height: 2rpx; background: rgba(255,255,255,0.1); margin-bottom: 30rpx;
  }
  
  .qr-box {
    background: #fff;
    padding: 10rpx;
    border-radius: 12rpx;
    width: 140rpx; height: 140rpx;
    display: flex; flex-direction: column; align-items: center;
    justify-content: center;
  }
  
  .qr-img { width: 100%; height: 100%; }
  .qr-text { color: rgba(255,255,255,0.5); font-size: 20rpx; margin-top: 16rpx; }
  
  /* 展开指示小箭头 */
  .expand-indicator {
    position: absolute;
    bottom: 10rpx; left: 0; right: 0;
    text-align: center;
    color: rgba(255,255,255,0.2);
    font-size: 32rpx;
    transition: transform 0.3s;
  }
  .expand-indicator.rotate { transform: rotate(180deg); }
  
  
  /* ===================================
     3. 悬浮数据舱
     =================================== */
  .dashboard-section {
    padding: 0 32rpx;
    margin-top: -60rpx; /* 向上插入会员卡 */
    position: relative;
    z-index: 10;
    /* 如果会员卡展开，数据板会被顶下去，通过 transition 实现平滑 */
    transition: margin-top 0.4s;
  }
  
  /* 配合会员卡展开，如需让数据板也跟着动，通常不需要额外写，DOM流会自动推挤 */
  
  .data-board {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 32rpx;
    box-shadow: var(--shadow-float);
    padding: 32rpx 0;
    display: flex;
    align-items: center;
    border: 1px solid rgba(255,255,255,0.6);
  }
  
  .data-item { flex: 1; display: flex; flex-direction: column; align-items: center; }
  .item-hover { opacity: 0.6; }
  
  .data-divider { width: 2rpx; height: 50rpx; background: rgba(0,0,0,0.06); }
  
  .data-num {
    font-family: 'DIN Alternate', sans-serif;
    font-size: 44rpx;
    font-weight: 800;
    color: var(--text-main);
    line-height: 1.1;
  }
  
  .data-label {
    font-size: 24rpx;
    color: var(--text-sub);
    margin-top: 8rpx;
    font-weight: 500;
  }
  
  /* ===================================
     4. 功能宫格 (Clean Icons)
     =================================== */
  .menu-section { padding: 40rpx 32rpx; }
  
  .menu-grid {
    background: #FFFFFF;
    border-radius: 32rpx;
    box-shadow: var(--shadow-card);
    padding: 40rpx 20rpx;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    row-gap: 40rpx;
  }
  
  .menu-item { display: flex; flex-direction: column; align-items: center; }
  .item-hover-scale { transform: scale(0.96); transition: transform 0.1s; }
  
  /* 图标容器：去掉背景色，保留尺寸占位 */
  .icon-wrap {
    width: 96rpx;
    height: 96rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8rpx;
    /* 之前有 background 和 border-radius，现在去掉 */
  }
  
  .menu-icon {
    width: 56rpx; /* 稍微放大图标，因为没有背景衬托了 */
    height: 56rpx;
  }
  
  .menu-text {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
  }
  
  /* ===================================
     5. 弹窗样式 (复用保持不变)
     =================================== */
  .spec-mask { position: fixed; inset: 0; background-color: rgba(0,0,0,0.4); z-index: 500; backdrop-filter: blur(4px); }
  .spec-popup {
    position: fixed; left: 50rpx; right: 50rpx; top: 50%; transform: translateY(-50%);
    background: #FFFFFF; border-radius: 32rpx;
    box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15); z-index: 501;
    padding: 40rpx; box-sizing: border-box;
  }
  .spec-top { display: flex; align-items: center; gap: 24rpx; margin-bottom: 40rpx; }
  .profile-avatar-wrap { 
    width: 140rpx; height: 140rpx; border-radius: 50%; 
    background: #111; overflow: hidden; position: relative; 
    flex: none; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
  }
  .profile-avatar-img { width: 100%; height: 100%; }
  .profile-avatar-ph { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #fff; background: #333; }
  .profile-avatar-btn { position: absolute; inset: 0; opacity: 0; }
  .spec-top-info { flex: 1; }
  .spec-top-title { font-size: 36rpx; font-weight: 700; color: #111; }
  .spec-top-sub { margin-top: 8rpx; font-size: 24rpx; color: #888; }
  .profile-body { margin-bottom: 40rpx; }
  .profile-row { display: flex; align-items: center; gap: 20rpx; background: #F7F8FA; border-radius: 20rpx; padding: 24rpx 30rpx; }
  .profile-label { font-size: 28rpx; font-weight: 600; color: #333; }
  .profile-input { flex: 1; font-size: 28rpx; color: #111; }
  .profile-bottom { display: flex; gap: 24rpx; }
  .profile-btn { flex: 1; height: 88rpx; line-height: 88rpx; border-radius: 20rpx; font-size: 30rpx; font-weight: 600; margin: 0; }
  .profile-btn::after { border: none; }
  .profile-btn-cancel { background: #F2F2F2; color: #666; }
  .profile-btn-save { background: #111; color: #fff; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15); }