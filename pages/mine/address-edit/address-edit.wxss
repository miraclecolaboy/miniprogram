.page {
  background: #f7f7f7;
  height: 100vh;
  overflow: hidden;
  padding-bottom: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
}

.page-scroll-spacer {
  height: calc(180rpx + env(safe-area-inset-bottom));
}

.header {
  padding: 30rpx 24rpx 10rpx;
}

.header-title {
  font-size: 30rpx;
  font-weight: 700;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #111;
}

.placeholder {
  color: #aaa;
}

.switch-card {
  padding: 24rpx;
}

.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-text {
  font-size: 28rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 140rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.06);
}

.save-btn {
  width: calc(100% - 80rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #111;
  color: #fff;
  font-size: 30rpx;
  border-radius: 16rpx;
}
