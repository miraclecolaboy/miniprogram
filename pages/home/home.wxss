/* pages/home/home.wxss */
page {
  --bg-page: #F7F8FA;
  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --text-light: #C5C6CB;
  --card-bg: #FFFFFF;
  --gold: #BFA15F;
  /* 阴影：更扩散、更淡，营造高级悬浮感 */
  --shadow-float: 0 20rpx 60rpx rgba(0, 0, 0, 0.06);
  --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  background: var(--bg-page);
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  height: 100vh;
  overflow: hidden; /* Use inner scroll-view to avoid page scrollbar. */
}

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes storeNameIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.footer-store-name {
  display: inline-block;
  opacity: 0;
  transform: translateY(10rpx);
  will-change: opacity, transform;
  animation: storeNameIn 0.35s ease-out both;
}

/* 1. Header */
.header-section { 
  width: 100%; 
  height: 560rpx;
}

.banner-swiper { 
  width: 100%; 
  height: 100%; 
}

/* [新增] 纯图片模式 */
.banner-img {
  width: 100%;
  height: 100%;
  display: block;
}


/* Main Container */
.main-container {
  padding: 0 32rpx; 
  display: flex; 
  flex-direction: column; 
  gap: 24rpx;
  /* 调整：加深负边距，让毛玻璃区域更多重叠 */
  margin-top: -80rpx; 
  position: relative; 
  z-index: 10;
}

/* 2. Core Nav Card (紧凑版 + 毛玻璃) */
.core-nav-card {
  /* 毛玻璃背景 */
  background: rgba(255, 255, 255, 0.55);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  /* 玻璃质感边框 (1px 半透明白) */
  border: 1px solid rgba(255, 255, 255, 0.6);
  
  border-radius: 32rpx;
  box-shadow: var(--shadow-float);
  display: flex;
  align-items: center;
  /* 调整：紧凑内边距 */
  padding: 28rpx 0;
  width: 100%;
  box-sizing: border-box;
  opacity: 0; /* 初始隐藏，确保重置时从0开始 */
  will-change: transform, opacity; /* 性能优化 */
  animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

.nav-item-col {
  flex: 1;
  display: flex; 
  flex-direction: column; 
  align-items: center;
  justify-content: center;
}

.nav-icon { 

  width: 64rpx; 
  height: 64rpx; 
  margin-bottom: 8rpx;
}

.nav-txt-box { 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
}

.nav-title { 
  font-size: 28rpx;
  font-weight: 800; 
  color: var(--text-main);
  margin-bottom: 4rpx; 
}

.nav-sub { 
  font-size: 16rpx; 
  color: var(--text-sub); 
  font-weight: 700; 
  letter-spacing: 2rpx; 
  transform: scale(0.9);
}

.nav-divider {
  width: 2rpx;
  /* 调整：分割线高度适配 */
  height: 48rpx;
  background: rgba(0, 0, 0, 0.06);
}

.hover-opacity { 
  opacity: 0.6; 
  transition: opacity 0.2s;
}

/* 3. Asset Grid (2x2) */
.asset-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 8rpx;
}

.asset-card {
  background: linear-gradient(160deg, #FFFFFF 0%, #FDFDFD 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-card);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
  box-sizing: border-box;
  opacity: 0;
  will-change: transform, opacity;
  animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

.card-hover { 
  transform: scale(0.98);
  transition: transform 0.1s; 
}

.card-top { 
  display: flex;
  justify-content: space-between; 
  align-items: flex-start; 
}

.card-title { 
  font-size: 26rpx;
  color: var(--text-main); 
  font-weight: 600; 
  letter-spacing: 1rpx; 
}

.icon-halo {
  width: 72rpx;
  height: 72rpx; 
  border-radius: 50%;
  display: flex; 
  align-items: center;
  justify-content: center;
  background: rgba(191, 161, 95, 0.08);
}

.bg-blue-light { background: rgba(0, 122, 255, 0.06); }
.bg-orange-light { background: rgba(255, 149, 0, 0.06); }
.bg-red-light { background: rgba(255, 59, 48, 0.06); }

.card-icon { 
  width: 36rpx;
  height: 36rpx; 
  opacity: 0.9; 
}

.card-bottom { 
  display: flex;
  flex-direction: column; 
  gap: 8rpx;
}

.card-value-num {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 48rpx; 
  font-weight: 800; 
  color: var(--text-main); 
  line-height: 1;
}

.card-value-txt {
  font-size: 30rpx;
  font-weight: 700; 
  color: var(--gold);
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis;
}

.price-row, .coupon-row { 
  display: flex;
  align-items: baseline;
  gap: 4rpx; 
}

.symbol { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: var(--text-main); 
}

.unit { 
  font-size: 22rpx; 
  color: var(--text-sub);
}

.text-gold { color: var(--gold); }

.card-action { 
  font-size: 20rpx; 
  color: var(--text-light); 
  font-weight: 500; 
  margin-top: 4rpx;
}

/* 依次延迟动画，增加层次感 */
.asset-card:nth-child(1) { animation-delay: 0.1s; }
.asset-card:nth-child(2) { animation-delay: 0.15s; }
.asset-card:nth-child(3) { animation-delay: 0.2s; }
.asset-card:nth-child(4) { animation-delay: 0.25s; }

/* Footer */
.footer-tips {
  text-align: center; 
  margin-top: 24rpx; 
  color: #D1D1D6; 
  font-size: 20rpx; 
  font-weight: 600; 
  letter-spacing: 4rpx; 
  padding-bottom: 40rpx;
}