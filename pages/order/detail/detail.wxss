.detail-page {
  height: 100vh;
  overflow: hidden; /* Use inner scroll-view to avoid page scrollbar. */
  padding: 0;
  background-color: #f7f7f7;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.page-scroll-spacer {
  height: calc(160rpx + env(safe-area-inset-bottom));
}

/* 商品大图 */
.detail-img {
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx;
  background-color: #f2f2f2;
  margin-bottom: 24rpx;
}

/* --- 商品基本信息 --- */
.detail-info-card {
  background-color: #fff;
  padding: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.03);
  margin-bottom: 24rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.detail-price-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-price {
  font-size: 34rpx;
  font-weight: 600;
}

.detail-meta {
  font-size: 24rpx;
  color: #888;
  display: flex;
  gap: 20rpx;
}

/* --- 规格选择区域（有规格时显示） --- */
.detail-spec-card {
  background-color: #fff;
  padding: 26rpx;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.03);
  margin-bottom: 24rpx;
}

.spec-group {
  margin-bottom: 24rpx;
}

.spec-group-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.spec-option {
  padding: 0 26rpx;
  height: 60rpx;
  border-radius: 14rpx;
  background-color: #f5f5f5;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.spec-option.active {
  background-color: #111;
  color: #fff;
}

/* --- 数量 --- */
.detail-qty-card {
  background-color: #fff;
  padding: 26rpx;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.03);
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.qty-label {
  font-size: 28rpx;
  font-weight: 600;
}

.qty-control {
  display: flex;
  align-items: center;
}

.qty-btn {
  width: 52rpx;
  height: 52rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}

.qty-btn-plain {
  border: 1rpx solid #111;
  background-color: #fff;
  color: #111;
}

.qty-btn-solid {
  background-color: #111;
  color: #fff;
}

.qty-count {
  width: 60rpx;
  text-align: center;
  margin: 0 12rpx;
  font-size: 28rpx;
}

/* --- 商品详情 --- */
.detail-desc-card {
  background-color: #fff;
  padding: 26rpx;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.03);
  margin-bottom: 24rpx;
}

.detail-desc-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.detail-desc-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* --- 底部栏 --- */
.detail-bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 124rpx;
  background-color: #fff;
  box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.06);
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-bottom-label {
  color: #888;
  font-size: 24rpx;
}

.detail-bottom-price {
  font-size: 36rpx;
  font-weight: 700;
}

.detail-add-btn {
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #111;
  color: #fff;
  border-radius: 999rpx;
  font-size: 28rpx;
  border: none;
  margin-right: 10rpx;
}

/* 多图轮播（新增，不影响原样式） */
.detail-img-swiper {
  overflow: hidden;
}


/* 商品主图：16:9 比例盒子（按宽度算高度） */
.detail-img-ratio16x9 {
  position: relative;
  height: 0;
  padding-top: 56.25%; /* 9/16 */
  overflow: hidden;    /* 配合圆角裁切 */
}

/* swiper / 单图：铺满比例盒子 */
.detail-img-layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

/* 兼容：确保 swiper-item 有高度 */
.detail-img-swiper-item {
  height: 100%;
}

/* 轮播内图片铺满 item（aspectFill 负责居中裁剪） */
.detail-img-media {
  width: 100%;
  height: 100%;
  display: block;
}
