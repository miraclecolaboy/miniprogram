/* pages/order/detail/detail.wxss */
page {
  --bg-page: #FFFFFF;
  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --black: #1A1A1A;

  background: var(--bg-page);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  box-sizing: border-box;
  height: 100vh;
  overflow: hidden; /* Use inner scroll-view to avoid page scrollbar. */
  padding: 0;
}

.detail-page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: var(--bg-page);
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
}

.page-scroll-spacer {
  height: calc(260rpx + env(safe-area-inset-bottom));
}

/* =========================
   Poster
   ========================= */
.poster-wrapper {
  padding: 24rpx 32rpx 0;
}

.img-container {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 75%; /* 4:3 ratio */
  border-radius: 28rpx;
  overflow: hidden;
  background: #F0F0F0;
  box-shadow: 0 20rpx 40rpx -10rpx rgba(0, 0, 0, 0.08);
}

.img-layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.img-swiper {
  overflow: hidden;
}

.img-swiper-item {
  height: 100%;
}

.img-media {
  width: 100%;
  height: 100%;
  display: block;
}

/* =========================
   Content Flow
   ========================= */
.content-flow {
  padding: 44rpx 32rpx 0;
}

.header-section {
  margin-bottom: 44rpx;
}

.product-meta-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 28rpx;
}

.title {
  flex: 1;
  min-width: 0;
  font-size: 36rpx;
  font-weight: 800;
  line-height: 1.2;
  color: var(--black);
  letter-spacing: -0.5rpx;
  word-break: break-word;
}

.price-block {
  flex-shrink: 0;
  text-align: right;
  line-height: 1;
}

.price {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 42rpx;
  font-weight: 900;
  color: var(--black);
  letter-spacing: -1rpx;
  font-variant-numeric: tabular-nums;
  display: inline-flex;
  align-items: flex-start;
}

.currency {
  font-size: 24rpx;
  font-weight: 700;
  margin-right: 4rpx;
  line-height: 1;
}

.desc {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: var(--text-sub);
  line-height: 1.6;
  max-width: 92%;
}

/* =========================
   Specs
   ========================= */
.spec-section {
  margin-bottom: 52rpx;
}

.spec-group {
  margin-bottom: 32rpx;
}
.spec-group:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  color: #999;
  font-weight: 800;
  margin-bottom: 18rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.spec-pill {
  height: 72rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F7F8FA;
  color: var(--text-main);
  border: 2rpx solid transparent;
  box-sizing: border-box;
  transition: transform 0.2s ease, background 0.2s ease;
}

.spec-pill.active {
  background: var(--black);
  color: #fff;
  transform: scale(1.03);
  box-shadow: 0 16rpx 36rpx rgba(0, 0, 0, 0.16);
}

.pill-hover {
  opacity: 0.75;
}

/* =========================
   Quantity
   ========================= */
.qty-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  margin-bottom: 52rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.03);
}

.qty-label {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--black);
}

.qty-wrapper {
  display: flex;
  align-items: center;
  gap: 18rpx;
}

.qty-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-sizing: border-box;
}

.qty-btn.minus {
  background: #F2F3F5;
  color: var(--black);
}

.qty-btn.plus {
  background: var(--black);
  color: #fff;
}

.qty-num {
  min-width: 56rpx;
  text-align: center;
  font-family: 'DIN Alternate', sans-serif;
  font-size: 32rpx;
  font-weight: 800;
  color: var(--black);
  font-variant-numeric: tabular-nums;
}

.icon-bar {
  position: absolute;
  background: currentColor;
  border-radius: 999rpx;
}

.icon-bar.h {
  width: 18rpx;
  height: 4rpx;
}

.icon-bar.v {
  width: 4rpx;
  height: 18rpx;
}

.qty-hover {
  opacity: 0.75;
}

.qty-hover-dark {
  opacity: 0.88;
}

/* =========================
   Article
   ========================= */
.detail-article {
  margin-top: 12rpx;
}

.article-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--black);
  margin-bottom: 24rpx;
  position: relative;
  display: inline-block;
}

.article-title::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 4rpx;
  width: 100%;
  height: 12rpx;
  background: rgba(0, 0, 0, 0.06);
  z-index: -1;
  border-radius: 8rpx;
}

.article-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  text-align: justify;
  white-space: pre-wrap;
}

/* =========================
   Floating Bar
   ========================= */
.float-bar-container {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.float-bar {
  height: 112rpx;
  background: rgba(20, 20, 20, 0.92);
  height: 108rpx;
  background: rgba(26, 26, 26, 0.94);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 12rpx 10rpx 36rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.25);
  padding: 0 12rpx 0 40rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.18);
  color: #fff;
  box-sizing: border-box;
}

.total-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 24rpx;
}

.total-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.55);
  font-weight: 700;
  letter-spacing: 2rpx;
  margin-bottom: 2rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 600;
  letter-spacing: 1rpx;
  margin-bottom: 4rpx;
}

.total-price {
  font-size: 40rpx;
  font-size: 44rpx;
  font-weight: 900;
  font-family: 'DIN Alternate', sans-serif;
  line-height: 1;
  font-variant-numeric: tabular-nums;
  display: inline-flex;
  display: flex;
  align-items: baseline;
  color: #FFFFFF;
}

.currency-sm {
  font-size: 28rpx;
  margin-right: 4rpx;
  margin-right: 6rpx;
  font-weight: 700;
}

.action-btn {
  height: 88rpx;
  padding: 0 34rpx;
  flex-shrink: 0;
  height: 84rpx;
  background: #FFFFFF;
  color: #000;
  color: #1A1A1A;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 900;
  font-size: 30rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  transition: transform 0.1s ease;
  transition: all 0.2s ease;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
}

.action-btn::after {
  border: none;
}

.action-btn--hover {
  transform: scale(0.98);
  transform: scale(0.96);
  opacity: 0.9;
}
