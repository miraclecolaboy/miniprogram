/* pages/order/order.wxss */

.page {
  /* 黑白极简（对齐项目整体 UI） */
  --bg-page: #F7F8FA;
  --card-bg: #FFFFFF;

  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --text-light: #C5C6CB;

  --black: #1A1A1A;

  --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  --shadow-float: 0 20rpx 60rpx rgba(0, 0, 0, 0.06);

  height: 100vh;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;

  background: var(--bg-page);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
  box-sizing: border-box;
}

/* =========================
   Header
   ========================= */
.page-header {
  flex-shrink: 0;
  padding: 24rpx 32rpx 18rpx;
  background: rgba(255, 255, 255, 0.72);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.top-card {
  background: transparent;
  border: 0;
  box-shadow: none;
  padding: 0;
}

.top-card-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 18rpx;
}

.top-card-left {
  min-width: 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

@keyframes storeNameIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.store-name {
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  line-height: 1.1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  opacity: 0;
  transform: translateY(10rpx);
  will-change: opacity, transform;
}

.store-name--in {
  opacity: 1;
  transform: translateY(0);
  animation: storeNameIn 0.35s ease-out both;
}

.top-card-right {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  padding: 8rpx;
  border-radius: 999rpx;
  background: #F1F2F4;
  border: 0;
  box-sizing: border-box;
}

.mode-pill {
  font-size: 26rpx;
  font-weight: 700;
  color: #666;
  padding: 14rpx 24rpx;
  border-radius: 999rpx;
  line-height: 1;
}

.mode-pill + .mode-pill { margin-left: 6rpx; }

.mode-pill.active {
  background: #FFFFFF;
  color: var(--text-main);
  font-weight: 800;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.notice-bar {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  padding: 0;
}

.notice-icon {
  width: 28rpx;
  height: 28rpx;
  border-radius: 6rpx;
  background: var(--black);
  color: #fff;
  font-size: 20rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 14rpx;
  flex-shrink: 0;
}

.notice-marquee {
  min-width: 0;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

/* =========================
   Body (Two Columns)
   ========================= */
.page-body {
  flex: 1;
  overflow: hidden;
  background: transparent;
  display: flex;
  padding: 12rpx 0 0;
  box-sizing: border-box;
}

.order-container {
  flex: 1;
  display: flex;
  overflow: hidden;
  background: #FFFFFF;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -12rpx 30rpx rgba(0, 0, 0, 0.03);
  border: 0;
  box-sizing: border-box;
}

.categories {
  width: 190rpx;
  height: 100%;
  background: rgba(0, 0, 0, 0.015);
  padding-top: 18rpx;
  padding-bottom: 220rpx;
  box-sizing: border-box;
  border-right: 0;
}

.category-item {
  margin: 0 12rpx 12rpx;
  padding: 20rpx 14rpx 20rpx 18rpx;
  font-size: 28rpx;
  color: var(--text-sub);
  text-align: left;
  position: relative;
  transition: all 0.2s ease;
  border-radius: 18rpx;
  line-height: 34rpx;
  max-height: 68rpx; /* at most 2 lines */
  white-space: normal;
  overflow: hidden;
}

.category-item.active {
  background: #FFFFFF;
  color: var(--text-main);
  font-weight: 800;
  box-shadow: none;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: var(--black);
  border-radius: 999rpx;
}

.products {
  flex: 1;
  height: 100%;
  overflow: hidden;
  padding: 18rpx 20rpx 220rpx;
  box-sizing: border-box;
  scroll-behavior: smooth;
}

.products::-webkit-scrollbar { display: none; width: 0; height: 0; color: transparent; }
.categories::-webkit-scrollbar,
.spec-scroll::-webkit-scrollbar,
.cart-sheet-list::-webkit-scrollbar { display: none; width: 0; height: 0; color: transparent; }

.category-title {
  font-size: 26rpx;
  color: var(--text-sub);
  font-weight: 700;
  letter-spacing: 2rpx;
  margin: 10rpx 0 18rpx;
}

/* =========================
   Skeleton (Products Loading)
   ========================= */
.sk-list {
  padding-top: 0;
}

.sk-title {
  width: 38%;
  height: 30rpx;
  border-radius: 12rpx;
  background: #F1F2F4;
  margin: 10rpx 0 18rpx;
}

.sk-card {
  display: flex;
  padding: 22rpx 0;
}

.sk-img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 22rpx;
  background: #F1F2F4;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-right: 24rpx;
  flex-shrink: 0;
}

.sk-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 6rpx;
}

.sk-line {
  height: 26rpx;
  border-radius: 12rpx;
  background: #F1F2F4;
}
.sk-line-lg { width: 72%; }
.sk-line-sm { width: 52%; margin-top: 12rpx; }

.sk-row {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.sk-price {
  width: 160rpx;
  height: 34rpx;
  border-radius: 12rpx;
  background: #F1F2F4;
}

.sk-btn {
  width: 96rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #F1F2F4;
}

.product-card {
  display: flex;
  margin-bottom: 0;
  padding: 20rpx 10rpx 20rpx 10rpx;
  border-radius: 0;
  background: transparent;
  border: 0;
  box-shadow: none;
  box-sizing: border-box;
  transition: opacity 0.15s ease;
}

.product-img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 22rpx;
  background: #eee;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-right: 24rpx;
  flex-shrink: 0;
  display: block;
}

.product-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  padding-bottom: 6rpx;
}

.product-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.35;
  margin-bottom: 16rpx;
}

.product-desc {
  font-size: 24rpx;
  color: var(--text-sub);
  line-height: 1.35;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-bottom {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.currency {
  font-size: 24rpx;
  font-weight: 700;
  margin-right: 2rpx;
}

.product-price {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--text-main);
  line-height: 1;
  font-variant-numeric: tabular-nums;
  font-family: 'DIN Alternate', sans-serif;
}

/* =========================
   Qty Controls
   ========================= */
.qty-control {
  display: flex;
  align-items: center;
}

.qty-btn {
  width: 52rpx;
  height: 52rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-sizing: border-box;
}

.qty-btn.minus {
  border: 2rpx solid rgba(0, 0, 0, 0.18);
  background: #FFFFFF;
  color: var(--black);
}

.qty-btn.plus {
  background: var(--black);
  color: #fff;
}

.qty-count {
  min-width: 50rpx;
  text-align: center;
  font-family: 'DIN Alternate', sans-serif;
  font-size: 32rpx;
  font-weight: 800;
  color: var(--black);
  font-variant-numeric: tabular-nums;
  margin: 0 18rpx;
}

.icon-bar {
  position: absolute;
  background: currentColor;
  border-radius: 999rpx;
}

.icon-bar.h {
  width: 18rpx;
  height: 4rpx;
}
.qty-btn.minus .icon-bar.h {
  width: 14rpx;
}

.icon-bar.v {
  width: 4rpx;
  height: 18rpx;
}

.qty-hover {
  opacity: 0.75;
}

.qty-hover-dark {
  opacity: 0.88;
}

.qty-btn-spec {
  height: 48rpx;
  padding: 0 22rpx;
  font-size: 22rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

/* 强制购物车和规格弹窗的加减号样式与列表一致 */
.cart-item-qty .qty-btn,
.spec-qty-control .qty-btn {
  width: 52rpx;
  height: 52rpx;
  padding: 0;
}

.spec-choose-btn {
  height: 56rpx;
  padding: 0 24rpx;
  border-radius: 999rpx;
  background: var(--black);
  color: #fff;
  font-size: 24rpx;
  font-weight: 800;
  letter-spacing: 1rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  min-width: 112rpx;
  box-shadow: none;
}

/* =========================
   Spec Popup (Center Modal)
   ========================= */
.spec-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 500;
  animation: maskIn 0.18s ease-out both;
}

.spec-popup {
  position: fixed;
  left: 48rpx;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #FFFFFF;
  border-radius: 40rpx;
  box-shadow: none;
  border: 0;
  z-index: 600;

  padding: 22rpx 22rpx 18rpx;
  max-height: 72vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  will-change: transform, opacity;
  animation: modalIn 0.22s cubic-bezier(0.16, 1, 0.3, 1) both;
}

.spec-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 6rpx 8rpx 16rpx;
  box-sizing: border-box;
}

.spec-header-title {
  font-size: 30rpx;
  font-weight: 900;
  color: var(--text-main);
  letter-spacing: 1rpx;
}

.popup-handle-bar {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 8rpx 0 16rpx;
  box-sizing: border-box;
}

.popup-handle {
  width: 88rpx;
  height: 10rpx;
  border-radius: 999rpx;
  background: #E0E0E0;
}

.spec-top {
  display: flex;
  margin-bottom: 16rpx;
  background: transparent;
  border-radius: 0;
  padding: 0;
  box-sizing: border-box;
}

.spec-top-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 18rpx;
  background: #eee;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-right: 20rpx;
  flex-shrink: 0;
}

.spec-top-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.spec-top-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.25;
  margin-bottom: 8rpx;
}

.spec-top-desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
  line-height: 1.35;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.spec-scroll {
  flex: 1;
  overflow: hidden;
  min-height: 0;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.spec-group { margin-bottom: 22rpx; }
.spec-group-title { font-size: 26rpx; font-weight: 700; margin-bottom: 12rpx; color: var(--text-main); }
.spec-options { display: flex; flex-wrap: wrap; gap: 12rpx; }

.spec-option {
  min-width: 150rpx;
  height: 60rpx;
  padding: 0 18rpx;
  border-radius: 12rpx;
  background: #FFFFFF;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  color: var(--text-main);
  font-size: 26rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.spec-option.active {
  background: var(--black);
  color: #fff;
}

.spec-qty {
  margin-top: 10rpx;
  padding-top: 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.spec-qty-label { font-size: 28rpx; font-weight: 700; color: var(--text-main); }
.spec-qty-control { display: flex; align-items: center; }

.spec-bottom {
  margin-top: 18rpx;
  padding-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.spec-bottom-left { flex: 1; min-width: 0; }
.spec-bottom-label { font-size: 22rpx; color: var(--text-sub); }
.spec-bottom-price { font-size: 36rpx; font-weight: 900; color: var(--text-main); font-family: 'DIN Alternate', sans-serif; }

.spec-bottom-btn {
  flex-shrink: 0;
  height: 84rpx;
  line-height: 84rpx;
  padding: 0 28rpx;
  border-radius: 999rpx;
  background: var(--black);
  color: #fff;
  font-size: 28rpx;
  font-weight: 800;
  box-shadow: none;
  border: 0;
}
.spec-bottom-btn::after { border: 0; }

/* =========================
   Cart Detail Sheet
   ========================= */
.cart-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.25);
  z-index: 180;
  animation: maskIn 0.18s ease-out both;
}

.cart-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: none;
  z-index: 190;

  max-height: 60vh;
  display: flex;
  flex-direction: column;
  padding: 28rpx 32rpx 36rpx;
  box-sizing: border-box;
  will-change: transform, opacity;
  animation: sheetUp 0.22s cubic-bezier(0.16, 1, 0.3, 1) both;
}

.cart-sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 18rpx;
  margin-bottom: 10rpx;
}

.cart-sheet-title {
  font-size: 30rpx;
  font-weight: 900;
  color: var(--text-main);
}

.cart-sheet-clear {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  background: transparent;
  border: 0;
  padding: 8rpx 0;
}

.cart-sheet-list {
  flex: 1;
  min-height: 0;
  max-height: 48vh;
  padding-top: 6rpx;
}

.cart-item {
  display: flex;
  padding: 18rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 0;
  box-shadow: none;
  margin-bottom: 14rpx;
  box-sizing: border-box;
}

.cart-item-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 20rpx;
  background: #eee;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-right: 24rpx;
  flex-shrink: 0;
}

.cart-item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 110rpx;
  padding: 2rpx 0;
  box-sizing: border-box;
}

.cart-item-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #333;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cart-item-sub {
  display: block;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.2;
}

.cart-item-sub-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.2;
}

.cart-item-spec {
  flex: 0 1 auto;
  min-width: 0;
  max-width: 380rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cart-item-unit { flex-shrink: 0; }

.cart-item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 48rpx;
}

.cart-item-total {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  font-family: 'DIN Alternate', sans-serif;
}

.cart-item-qty { display: flex; align-items: center; }

/* =========================
   Floating Cart Bar (Bottom)
   ========================= */
.cart-float {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  z-index: 185;
}

.cart-bar {
  height: 104rpx;
  background: rgba(30, 30, 30, 0.92);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 999rpx;
  box-shadow: var(--shadow-float);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx 0 28rpx;
  box-sizing: border-box;
  color: #FFFFFF;
  border: 0;
}

.cart-bar-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.cart-bar-text {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cart-total {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 900;
  line-height: 1.1;
  font-variant-numeric: tabular-nums;
  font-family: 'DIN Alternate', sans-serif;
}

.cart-bar .currency { color: rgba(255, 255, 255, 0.92); }

.cart-tip {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.72);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cart-btn {
  flex-shrink: 0;
  height: 82rpx;
  line-height: 82rpx;
  padding: 0 34rpx;
  border-radius: 999rpx;
  background: #FFFFFF;
  color: #000000;
  font-size: 30rpx;
  font-weight: 900;
  border: 0;
  box-shadow: none;
}
.cart-btn::after { border: 0; }

.cart-btn.disabled {
  background: rgba(255, 255, 255, 0.35);
  color: rgba(0, 0, 0, 0.45);
  box-shadow: none;
}

.cart-btn.active {
  transform: scale(1.02);
  transition: transform 0.18s ease-out;
}

/* =========================
   Motion
   ========================= */
@keyframes maskIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes modalIn {
  from { opacity: 0; transform: translateY(-46%) scale(0.98); }
  to { opacity: 1; transform: translateY(-50%) scale(1); }
}

@keyframes sheetUp {
  0% { opacity: 0; transform: translateY(60rpx); }
  80% { opacity: 1; transform: translateY(-8rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

/* =========================
   Press / Hover States
   ========================= */
.hover-opacity { opacity: 0.6; }
.hover-scale-sm { transform: scale(0.97); }
.category-hover { background: rgba(0, 0, 0, 0.03); }
.product-hover { opacity: 0.97; }
.btn-hover { opacity: 0.92; transform: scale(0.97); }
.btn-hover-dark { opacity: 0.92; transform: scale(0.99); }
.spec-option-hover { opacity: 0.85; }
