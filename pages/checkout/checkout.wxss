/* pages/checkout/checkout.wxss */
page {
  --bg-page: #F7F8FA;
  --bg-card: #FFFFFF;
  --text-main: #1D1D1F;
  --text-sub: #86868B;
  --accent: #000000;
  --red: #FA2C19;
  --border: #F2F2F2;

  background-color: var(--bg-page);
  font-family: -apple-system, Helvetica, sans-serif;
  color: var(--text-main);
  box-sizing: border-box;
}

.main-scroll {
  height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

.arrow {
  font-family: monospace;
  color: #C7C7CC;
  margin-left: 8rpx;
  font-weight: bold;
}

/* 卡片通用 */
.card {
  background: var(--bg-card);
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  /* 极轻微的阴影，增加层次感 */
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03);
}

/* --- Header Card: Toggle & Store --- */
.header-card {
  padding: 12rpx; /* 内部再留白 */
}

/* 切换器 */
.sub-mode-toggle {
  display: flex;
  background: #F5F5F7;
  padding: 8rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}
.toggle-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #999;
  transition: all 0.25s ease;
}
.toggle-item.active {
  background: #FFFFFF;
  color: var(--accent);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}
.toggle-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}
.toggle-item.active .toggle-icon {
  opacity: 1;
}

/* 门店信息 */
.store-info-container {
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.store-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}
.store-name {
  font-size: 34rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 6rpx;
}
.store-dist {
  font-size: 24rpx;
  color: var(--text-sub);
}
.pickup-time-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--border);
}
.label { font-size: 28rpx; font-weight: 500; }
.value-wrap { display: flex; align-items: center; }
.time-val { font-size: 32rpx; font-weight: 700; color: var(--accent); }

/* 外卖地址模式 */
.delivery-header { padding: 20rpx 20rpx 10rpx 20rpx; }
.dh-title { font-size: 34rpx; font-weight: 800; }
.address-box {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 80rpx;
}
.addr-content { flex: 1; display: flex; flex-direction: column; padding-right: 20rpx;}
.addr-main { font-size: 32rpx; font-weight: 700; margin-bottom: 8rpx; line-height: 1.3;}
.addr-sub { font-size: 26rpx; color: var(--text-sub); }
.addr-placeholder {
  display: flex; align-items: center; color: var(--accent); font-weight: 600; font-size: 30rpx;
}
.plus-btn {
  width: 36rpx; height: 36rpx; border-radius: 50%; border: 2rpx solid var(--accent);
  display: flex; align-items: center; justify-content: center;
  font-size: 32rpx; line-height: 30rpx; margin-right: 12rpx;
}

/* --- Product Card --- */
.product-list { display: flex; flex-direction: column; }
.p-item { display: flex; margin-bottom: 32rpx; }
.p-img {
  width: 112rpx; height: 112rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.p-info {
  flex: 1; display: flex; flex-direction: column; justify-content: space-between; padding: 4rpx 0;
}
.p-row { display: flex; justify-content: space-between; align-items: baseline; }
.p-name { font-size: 28rpx; font-weight: 500; color: var(--text-main); }
.p-price { font-size: 28rpx; font-weight: 600; color: var(--text-main); }
.sub-row { margin-top: auto; }
.p-spec { font-size: 22rpx; color: var(--text-sub); }
.p-count { font-size: 24rpx; color: var(--text-sub); }

.expand-btn {
  text-align: center; font-size: 24rpx; color: var(--text-sub);
  padding-top: 20rpx; border-top: 1rpx solid var(--border);
}
.arrow-down { display: inline-block; margin-left: 6rpx; transform: scaleX(1.4); transition: transform 0.2s; }
.arrow-down.up { transform: scaleX(1.4) rotate(180deg); }

.fee-section { margin-top: 20rpx; border-top: 1rpx solid var(--border); padding-top: 24rpx; }
.fee-row { display: flex; justify-content: space-between; font-size: 28rpx; margin-bottom: 8rpx; }
.fee-val { font-weight: 600; }
.fee-tip { font-size: 22rpx; color: var(--red); text-align: right; }

/* --- Options Card --- */
.cell-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid var(--border);
}
.cell-item:last-child { border-bottom: none; }
.cell-lbl { font-size: 28rpx; color: var(--text-main); }
.cell-right { font-size: 28rpx; color: var(--text-sub); display: flex; align-items: center; }
.cell-right.highlight-red { color: var(--red); font-weight: 600; }
.cell-right.highlight-black { color: var(--accent); font-weight: 600; }

.vip-wrapper { display: flex; align-items: center; }
.vip-badge {
  background: var(--accent); color: #fff; font-size: 20rpx; 
  padding: 2rpx 8rpx; border-radius: 4rpx; margin-left: 10rpx;
}
.remark-input { flex: 1; text-align: right; color: var(--text-main); font-size: 28rpx; }
.ph-color { color: #CCCCCC; }

/* --- Bottom Bar --- */
.footer-spacer { height: 180rpx; }
.bottom-bar {
  position: fixed; bottom: 0; left: 0; right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.05);
  display: flex; justify-content: space-between; align-items: center;
  z-index: 999;
}
.bar-left { display: flex; flex-direction: column; justify-content: center; }
.final-price-row { display: flex; align-items: baseline; color: var(--text-main); line-height: 1; }
.symbol { font-size: 32rpx; font-weight: 600; margin-right: 4rpx; }
.big-num { font-size: 56rpx; font-weight: 800; letter-spacing: -1rpx; }
.discount-tip { font-size: 22rpx; color: var(--text-sub); margin-top: 6rpx; }

.pay-btn {
  background: var(--accent);
  color: #FFFFFF;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 80rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.25);
}
.pay-btn:active { transform: scale(0.98); opacity: 0.9; }