.page {
  --bg-page: #F7F8FA;
  --text-main: #1D1D1F;
  --text-sub: #86909C;
  --text-light: #C5C6CB;
  --card-bg: #FFFFFF;
  --shadow-card: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-page);
  color: var(--text-main);
}
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #888;
}
.tab-item.active {
  color: #111;
  font-weight: 600;
  position: relative;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #111;
  border-radius: 3rpx;
}
.swiper {
  flex: 1;
}
.order-list {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.order-card {
  background: linear-gradient(160deg, #FFFFFF 0%, #FDFDFD 100%);
  border-radius: 32rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-card);
}
.order-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.order-mode {
  background: var(--text-main);
  color: #fff;
  font-size: 22rpx;
  font-weight: 800;
  padding: 8rpx 18rpx;
  border-radius: 14rpx;
  line-height: 1;
  flex-shrink: 0;
}
.order-status-block {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
}
.order-status {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1.2;
  white-space: nowrap;
}
.order-subinfo {
  margin-top: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-light);
  line-height: 1.2;
  white-space: nowrap;
}
.order-main {
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}
.goods-scroll {
  flex: 1;
  min-width: 0;
}
.goods-row {
  display: flex;
  align-items: center;
  padding-right: 10rpx;
}
.goods-item {
  width: 132rpx;
  flex-shrink: 0;
  margin-right: 14rpx;
}
.goods-img {
  width: 132rpx;
  height: 132rpx;
  border-radius: 18rpx;
  background: #eee;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  display: block;
}
.order-footer {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 18rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f3f3;
}
.order-footer-left {
  min-width: 0;
}
.order-time {
  font-size: 22rpx;
  color: var(--text-light);
  line-height: 1.2;
}
.order-summary {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
}
.order-summary-price {
  margin-left: 6rpx;
  font-family: 'DIN Alternate', sans-serif;
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}
.empty-tip, .loading-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 80rpx 0;
}
