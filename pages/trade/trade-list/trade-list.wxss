.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
}
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #888;
}
.tab-item.active {
  color: #111;
  font-weight: 600;
  position: relative;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #111;
  border-radius: 3rpx;
}
.swiper {
  flex: 1;
}
.order-list {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.order-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 22rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03);
}
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-type {
  background: #111;
  color: #fff;
  font-size: 23rpx;
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}
.order-pickup-no {
  font-size: 34rpx;
  font-weight: 600;
  color: #111;
  line-height: 1;
}
.order-status {
  font-size: 26rpx;
  color: #888;
  flex-shrink: 0;
}
.order-main {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}
.goods-scroll {
  flex: 1;
  min-width: 0;
}
.goods-row {
  display: flex;
  align-items: flex-start;
  padding-right: 10rpx;
}
.goods-item {
  width: 150rpx;
  flex-shrink: 0;
  margin-right: 16rpx;
}
.goods-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  background: #eee;
}
.goods-name {
  margin-top: 10rpx;
  font-size: 23rpx;
  color: #111;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-right {
  width: 170rpx;
  text-align: right;
  flex-shrink: 0;
  margin-left: 16rpx;
}
.order-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}
.order-count {
  margin-top: 8rpx;
  font-size: 23rpx;
  color: #888;
}
.empty-tip, .loading-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 80rpx 0;
}