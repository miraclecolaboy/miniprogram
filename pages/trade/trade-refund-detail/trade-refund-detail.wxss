/* =========================
   订单详情页 wxss（去重覆盖版）
   字号对齐售后页 trade-refund-detail.wxss
   不改 WXML / 不改类名 / 不改功能
   ========================= */

/* 页面 & 卡片 */
.page{
  min-height: 100vh;
  background: #f7f7f7;
  padding: 28rpx;
  box-sizing: border-box;
}

.card{
  background:#fff;
  border-radius: 22rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03);
}

/* 顶部状态 */
.status-card{
  padding-top: 34rpx;
  padding-bottom: 34rpx;
}

.status-title{
  font-size: 36rpx;
  font-weight: 700;
  color:#111;
  line-height: 1.25;
}

.status-tip{
  margin-top: 10rpx;
  font-size: 24rpx;
  color:#666;
  line-height: 1.5;
}

.pickup-no{
  margin-top: 16rpx;
  font-size: 26rpx;
  color:#333;
  line-height: 1.5;
}

.pickup-strong{
  font-weight: 700;
  font-size: 32rpx;
}

/* 区块标题/说明 */
.section-title{
  font-size: 28rpx;
  font-weight: 700;
  color:#111;
  margin-bottom: 14rpx;
  line-height: 1.3;
}

.sub{
  font-size: 25rpx;
  color:#666;
  margin-top: 8rpx;
  line-height: 1.55;
  font-weight: 400;
}

/* 行 */
.row{
  display:flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 14rpx 0;
}

.label{
  font-size: 27rpx;
  color:#666;
  line-height: 1.55;
}

.value{
  font-size: 27rpx;
  color:#111;
  line-height: 1.55;
}

.copy{
  margin-left: 12rpx;
  font-size: 25rpx;
  color:#111;
  text-decoration: underline;
}

/* 强调（兼容 .value strong / .total .value.strong） */
.value.strong{
  font-weight: 700;
  font-size: 32rpx;
}
.total .value.strong{
  font-weight: 700;
  font-size: 32rpx;
}

/* 商品列表 */
.goods-line{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-top: 1rpx solid #f2f2f2;
}

.goods-line:first-child{
  border-top: none;
  padding-top: 0;
}

.goods-left-wrap{
  flex: 1;
  min-width: 0;
  display:flex;
  align-items:center;
}

.goods-thumb{
  width: 104rpx;
  height: 104rpx;
  border-radius: 14rpx;
  background: #eee;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.goods-left{
  flex: 1;
  min-width: 0;
}

.goods-name{
  font-size: 27rpx;
  color:#111;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.35;
}

.goods-spec{
  margin-top: 8rpx;
  font-size: 23rpx;
  color:#888;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.35;
}

.goods-right{
  display:flex;
  gap: 16rpx;
  align-items: center;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.goods-count{
  font-size: 25rpx;
  color:#666;
}

.goods-price{
  font-size: 30rpx;
  font-weight: 700;
  color:#111;
}

/* 门店/地址导航行 */
.nav-line{
  display:flex;
  align-items:center;
  justify-content: space-between;
  gap: 12rpx;
}

.nav-text{
  flex: 1;
  min-width: 0;
}

.nav-icon{
  width: 42rpx;
  height: 42rpx;
  flex-shrink: 0;
}

/* 底部按钮 */
.btn-row{
  display:flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 16rpx;
  margin-top: 14rpx;
}

.btn{
  background: #f5f5f5;
  color:#333;
  border-radius: 20rpx;
}

.primary{
  background:#111;
  color:#fff;
}

.danger{
  background:#000;
  color:#fff;
}

button.btn{
  font-size: 27rpx !important;
  padding: 0 26rpx !important;
  min-height: 72rpx !important;
  line-height: 72rpx !important;
  border-radius: 20rpx;
  flex: 1;
  width: auto;
  margin: 0;
}

/* 去掉 button 默认边框线 */
.btn-row button.btn::after{
  border: 0 !important;
}
.page .btn-row button::after{
  border: 0 !important;
}

/* =========================
   申请售后弹层（同页内 sheet）
   ========================= */
.mask{
  position: fixed;
  left:0; right:0; top:0; bottom:0;
  background: rgba(0,0,0,0.35);
  z-index: 90;
}

.sheet{
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  bottom: 30vh;

  background:#fff;
  border-radius: 24rpx;

  padding: 26rpx 26rpx 30rpx;
  z-index: 100;

  box-shadow: 0 18rpx 60rpx rgba(0,0,0,0.16);
  box-sizing: border-box;

  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.sheet-title{
  text-align:center;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 18rpx;
  line-height: 1.3;
}

.reason-list{
  display:flex;
  flex-wrap: nowrap;
  gap: 12rpx;
  white-space: nowrap;
}

.reason-item{
  padding: 14rpx 22rpx;
  border-radius: 999rpx;
  background:#f5f5f5;
  font-size: 25rpx;
  color:#333;

  flex: 0 0 auto;
  white-space: nowrap;
}

.reason-item.active{
  background:#111;
  color:#fff;
}

.remark{
  margin-top: 16rpx;
  background:#f7f7f7;
  border-radius: 14rpx;
  flex: 1;

  min-height: 160rpx;
  font-size: 25rpx;
  padding: 18rpx;

  box-sizing: border-box;
  width: 100%;
}

/* 弹窗底部按钮同排等宽 */
.sheet-btn-row{
  display: flex !important;
  flex-direction: row !important;
  flex-wrap: nowrap !important;
  gap: 12rpx;
  align-items: center;
  margin-top: 16rpx;
}

.sheet-btn-row .btn{
  flex: 1 1 0% !important;
  width: 0 !important;
  min-width: 0 !important;
  margin: 0 !important;
  border-radius: 20rpx;
}

/* 去掉 button 默认边框线（弹窗按钮） */
.sheet-btn-row button::after{
  border: 0 !important;
}

/* 只影响弹窗里的按钮视觉 */
.sheet .btn{
  background: #f5f5f5;
  color:#333;
}

.sheet .primary{
  background:#111;
  color:#fff;
}
