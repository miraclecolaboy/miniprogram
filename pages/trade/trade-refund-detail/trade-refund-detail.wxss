page {
  height: 100vh;
  overflow: hidden;
}

.page {
  height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", Arial, sans-serif;
  box-sizing: border-box;
}

.page-scroll {
  flex: 1;
  min-height: 0;
  height: 100%;
  width: 100%;
}

.header-area {
  background: #ffffff;
  padding: 20rpx 40rpx 120rpx;
  position: relative;
  z-index: 1;
}

.status-big-title {
  font-size: 38rpx;
  font-weight: 800;
  color: #111;
  letter-spacing: 1rpx;
  line-height: 1.2;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.status-desc {
  font-size: 24rpx;
  color: #666;
  font-weight: 400;
  line-height: 1.4;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx;
}

.steps-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
}
.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ccc;
  font-size: 22rpx;
  position: relative;
  z-index: 2;
}
.step-item.active { color: #111; font-weight: 600; }
.step-icon {
  width: 24rpx; height: 24rpx;
  background: #f5f5f5;
  border-radius: 50%;
  margin-bottom: 12rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 16rpx; color: transparent;
  border: 4rpx solid #fff;
}
.step-item.active .step-icon { background: #111; box-shadow: 0 0 0 2rpx #111; }

.step-line {
  flex: 1;
  height: 4rpx;
  background: #f5f5f5;
  margin: 0 10rpx;
  position: relative;
  top: -18rpx; 
}
.step-line.active { background: #111; }

.main-content {
  padding: 0 32rpx;
  margin-top: -80rpx; 
  position: relative;
  z-index: 2;
}

.card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: margin-bottom 0.2s; 
}
.card-title { font-size: 28rpx; font-weight: 700; color: #111; letter-spacing: 1rpx; }

.goods-item { display: flex; margin-bottom: 32rpx; }
.goods-item:last-child { margin-bottom: 0; }
.goods-img {
  width: 104rpx; height: 104rpx; 
  border-radius: 12rpx; background-color: #eee;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-right: 24rpx; flex-shrink: 0;
}
.goods-content {
  flex: 1; display: flex; flex-direction: column; justify-content: space-between; 
  padding: 2rpx 0; min-height: 104rpx;
}
.goods-row-top { display: flex; justify-content: space-between; align-items: flex-start; }
.goods-name { 
  font-size: 28rpx; font-weight: 600; color: #111; 
  line-height: 1.3; padding-right: 20rpx;
}
.goods-price { 
  font-size: 30rpx; font-weight: 700; color: #111; 
  font-family: "DINAlternate-Bold", Impact, sans-serif;
  letter-spacing: 1rpx; 
}
.goods-row-bottom { display: flex; justify-content: space-between; align-items: center; margin-top: 6rpx; }
.goods-spec { font-size: 22rpx; color: #999; }
.goods-count { font-size: 22rpx; color: #999; font-family: "DINAlternate-Bold", sans-serif; }

.divider-dashed { border-top: 1rpx dashed #eee; margin: 32rpx 0; }

.cost-fold-area {
  overflow: hidden;
  animation: slideDown 0.3s ease-in-out;
  margin-bottom: 8rpx;
}
@keyframes slideDown {
  from { opacity: 0; transform: translateY(-10rpx); max-height: 0; }
  to { opacity: 1; transform: translateY(0); max-height: 500rpx; }
}

.cost-row { display: flex; justify-content: space-between; font-size: 26rpx; color: #666; margin-bottom: 16rpx; }
.cost-val { 
  font-weight: 500; color: #111; 
  font-family: "DINAlternate-Bold", sans-serif;
  letter-spacing: 1rpx;
}
.cost-row.discount .cost-val { color: #ff4d4f; }

.total-row {
  display: flex; justify-content: space-between; align-items: center;
  margin-top: 16rpx; padding-top: 20rpx;
  border-top: 1rpx solid rgba(0,0,0,0.03); 
}
.total-row.clickable:active { opacity: 0.7; }
.total-left { display: flex; align-items: center; }
.total-lbl { font-size: 26rpx; color: #111; font-weight: 600; }

.arrow-small {
  width: 0; height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #ccc;
  margin-left: 8rpx; position: relative; top: 2rpx;
  transition: transform 0.3s;
}
.arrow-small.up { transform: rotate(180deg); }

.total-val { 
  font-size: 40rpx; 
  font-weight: 800; 
  color: #111; 
  font-family: "DINAlternate-Bold", Impact, sans-serif; 
  letter-spacing: 2rpx;
}
.points-tip {
  margin-top: 12rpx; text-align: right;
  font-size: 22rpx; color: #ff6b00;
}

.info-row { display: flex; justify-content: space-between; margin-bottom: 24rpx; font-size: 26rpx; }
.info-row:last-child { margin-bottom: 0; }
.info-label { color: #999; flex-shrink: 0; margin-right: 20rpx; }
.info-val { color: #333; font-weight: 500; text-align: right; }

.info-right { 
  display: flex; 
  align-items: center; 
  justify-content: flex-end;
  flex: 1; 
  overflow: hidden; 
}
.text-truncate {
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.copy-btn { 
  margin-left: 12rpx; 
  color: #111; 
  font-size: 20rpx; 
  border: 1rpx solid #ccc; 
  padding: 2rpx 8rpx; 
  border-radius: 4rpx; 
  flex-shrink: 0;
}

.expand-btn { display: flex; align-items: center; font-size: 24rpx; color: #999; }
.arrow {
  width: 10rpx; height: 10rpx;
  border-right: 2rpx solid #bbb; border-bottom: 2rpx solid #bbb; 
  margin-left: 8rpx; margin-bottom: 4rpx;
  transform: rotate(45deg); transition: transform 0.3s;
}
.arrow.up { transform: rotate(-135deg) translate(-2rpx, -2rpx); }
.info-fold-area { margin-top: 0; padding-top: 24rpx; border-top: 1rpx dashed #f0f0f0; animation: fadeIn 0.3s ease-in-out; }
@keyframes fadeIn { from { opacity: 0; transform: translateY(-10rpx); } to { opacity: 1; transform: translateY(0); } }

.footer-spacer { height: 160rpx; }
.footer-bar {
  position: fixed; bottom: 0; left: 0; width: 100%;
  background: #fff; border-top: 1rpx solid #f5f5f5;
  padding: 24rpx 40rpx; box-sizing: border-box;
  display: flex; justify-content: flex-end; gap: 20rpx;
  z-index: 100;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}
.btn {
  margin: 0 !important; height: 76rpx; line-height: 76rpx; padding: 0 40rpx;
  border-radius: 38rpx; font-size: 26rpx; font-weight: 600; box-sizing: border-box;
}
.btn::after { border: none; }
.btn-outline { background: #fff; border: 1rpx solid #e0e0e0; color: #333; }
.btn-black { background: #111; color: #fff; }

.mask { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.6); z-index: 999; }
.sheet-modal {
  position: fixed; bottom: 0; left: 0; width: 100%;
  background: #fff; border-radius: 32rpx 32rpx 0 0; padding: 48rpx 40rpx; z-index: 1000;
  box-sizing: border-box; padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
}
.sheet-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 48rpx; }
.sheet-title { font-size: 34rpx; font-weight: 700; color: #111; }
.close-btn { font-size: 44rpx; color: #999; line-height: 1; padding: 10rpx; }
.sheet-label { font-size: 28rpx; font-weight: 600; margin-bottom: 24rpx; }
.reason-tags { display: flex; flex-wrap: wrap; gap: 20rpx; margin-bottom: 48rpx; }
.tag { padding: 14rpx 32rpx; background: #f5f5f5; border-radius: 8rpx; font-size: 26rpx; color: #666; border: 1rpx solid transparent; transition: all 0.2s;}
.tag.active { background: #111; color: #fff; font-weight: 500; border-color: #111; }
.sheet-textarea { width: 100%; height: 240rpx; background: #f9f9f9; border-radius: 16rpx; padding: 24rpx; box-sizing: border-box; font-size: 28rpx; margin-bottom: 32rpx; }
.sheet-confirm-btn { background: #111; color: #fff; border-radius: 44rpx; font-size: 30rpx; height: 88rpx; line-height: 88rpx; width: 100%; letter-spacing: 2rpx; }
.sheet-confirm-btn::after { border: none; }
