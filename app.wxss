
   page {
    --black: #000000;
    --white: #FFFFFF;
    --bg-page: #F2F2F2;
    --text-main: #111111;
    --text-sub: #888888;
    
    font-family: -apple-system, "Helvetica Neue", Helvetica, sans-serif;
  
    --shadow-float: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
    --shadow-card: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
  
    background-color: var(--bg-page);
    color: var(--text-main);
    box-sizing: border-box;
  }
  
  .container { box-sizing: border-box; }
  
  .hover-scale { opacity: 0.6; transition: opacity 0.2s; }
  
  .css-arrow {
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    border-top: 3rpx solid currentColor;
    border-right: 3rpx solid currentColor;
    transform: rotate(45deg);
  }

  page::-webkit-scrollbar,
  scroll-view::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
  }

  @keyframes lljFadeInUp {
    from { opacity: 0; transform: translateY(26rpx); }
    to { opacity: 1; transform: translateY(0); }
  }

  .llj-enter {
    opacity: 0;
    will-change: transform, opacity;
    animation: lljFadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  .llj-delay-1 { animation-delay: 0.06s; }
  .llj-delay-2 { animation-delay: 0.12s; }
  .llj-delay-3 { animation-delay: 0.18s; }
  .llj-delay-4 { animation-delay: 0.24s; }

  @keyframes lljShimmer {
    0% { transform: translateX(-120%); }
    100% { transform: translateX(220%); }
  }

  .llj-shimmer {
    position: relative;
    overflow: hidden;
  }
  .llj-shimmer::after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 58%;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.55) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: translateX(-120%);
    animation: lljShimmer 1.15s ease-in-out infinite;
  }
