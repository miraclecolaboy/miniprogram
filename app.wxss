/* app.wxss */

/* ===================================
   1. 设计系统 (Design System) - 纯排版主义
   =================================== */
   page {
    /* --- 色板 --- */
    --black: #000000;       /* 极致纯黑 */
    --white: #FFFFFF;
    --bg-page: #F2F2F2;     /* 稍微深一点的灰，衬托白色卡片 */
    --text-main: #111111;
    --text-sub: #888888;    /* 灰色用于英文装饰 */
    
    /* --- 字体 --- */
    /* 使用系统默认的无衬线字体，Apple设备上显示为 San Francisco，非常漂亮 */
    font-family: -apple-system, "Helvetica Neue", Helvetica, sans-serif;
  
    /* --- 阴影 --- */
    --shadow-float: 0 20rpx 50rpx rgba(0, 0, 0, 0.05);
    --shadow-card: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
  
    background-color: var(--bg-page);
    color: var(--text-main);
    box-sizing: border-box;
  }
  
  .container { box-sizing: border-box; }
  
  /* 交互：透明度变化 */
  .hover-scale { opacity: 0.6; transition: opacity 0.2s; }
  
  /* 通用箭头 (用纯 CSS 画，比图标更锐利) */
  .css-arrow {
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    border-top: 3rpx solid currentColor;
    border-right: 3rpx solid currentColor;
    transform: rotate(45deg);
  }

  /* Hide scrollbars globally (page scroll + scroll-view). */
  page::-webkit-scrollbar,
  scroll-view::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
  }
