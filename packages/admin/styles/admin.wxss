/**app.wxss**/
page {
  background: #f7f7f7;
  color: #333;
  font-size: 28rpx;
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}



.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.06);
}

.row {
  display: flex;
  align-items: center;
}

.row-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-danger {
  background: #fa5151;
  color: #fff;
}

.text-muted { color: #888; }
