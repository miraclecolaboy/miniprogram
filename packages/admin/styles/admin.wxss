page {
  /* 现代 UI 色彩系统 */
  --bg: #F3F4F6;
  --card-bg: #FFFFFF;
  --primary: #000000;
  --text-main: #111827;
  --text-sub: #6B7280;
  --text-muted: #9CA3AF;
  --border: #E5E7EB;
  --success: #10B981;
  --danger: #EF4444;
  --warning: #F59E0B;
  
  background-color: var(--bg);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  font-size: 28rpx;
  box-sizing: border-box;
}

.page-header {
  padding: 32rpx 32rpx 16rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  background: var(--bg);
}

.page-title { font-size: 44rpx; font-weight: 800; color: var(--text-main); }
.page-sub { font-size: 24rpx; color: var(--text-sub); margin-top: 10rpx; }

/* 现代感卡片 */
.card {
  background: var(--card-bg);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

/* 布局辅助 */
.row { display: flex; align-items: center; }
.row-between { display: flex; align-items: center; justify-content: space-between; }
.row-right { display: flex; align-items: center; justify-content: flex-end; gap: 16rpx; }

/* 现代化按钮体系 */
.btn {
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
  box-sizing: border-box;
  background: #f5f5f5;
  color: var(--text-main);
}
.btn::after { border: none; }
.btn-mini { height: 56rpx; line-height: 56rpx; padding: 0 24rpx; font-size: 24rpx; border-radius: 12rpx; margin: 0; }
.btn-primary { background: var(--primary); color: #fff; }
.btn-outline { background: #fff; border: 2rpx solid var(--border); color: var(--text-main); }
.btn-danger { background: #FEF2F2; color: var(--danger); }
.btn-disabled { opacity: 0.5; pointer-events: none; }