@import "../../styles/admin.wxss";

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden; 
}

/* ================= 顶部与工具栏 ================= */
.toolbar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 72rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
  color: var(--text-main);
  margin-left: 12rpx;
}

.filter-btn {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-main);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
  display: flex;
  align-items: center;
}
.filter-btn .arrow { margin-left: 8rpx; color: var(--text-muted); font-size: 20rpx;}

/* ================= 列表滚动区 ================= */
.main-scroll {
  flex: 1;
  height: 0;
}
.page-content {
  padding: 24rpx 32rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--text-muted);
  text-align: center;
  padding: 40rpx 0;
}

/* 数据列表项增强 */
.data-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
  gap: 24rpx;
  align-items: center;
}
.data-item:last-child { border-bottom: none; padding-bottom: 0; }

.item-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: var(--bg);
  flex-shrink: 0;
}

.data-main {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.data-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.data-sub {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 4rpx;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}
.badge-success { background: rgba(16, 185, 129, 0.1); color: var(--success); }
.badge-disabled { background: var(--bg); color: var(--text-sub); }


/* ================= 全屏表单 (iOS Push Style) ================= */
.full-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: var(--bg);
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.full-modal-header {
  padding: 40rpx 32rpx 24rpx;
  background: var(--bg);
  position: relative;
  z-index: 101;
}

.full-modal-scroll {
  flex: 1;
  height: 0;
}

/* 底部吸浮操作条 */
.bottom-action-bar {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 102;
}

/* ================= 表单内部组件复用 ================= */
.card-title {
  font-size: 30rpx; font-weight: 800; color: var(--text-main); margin-bottom: 24rpx; display: flex; align-items: center;
}
.card-title::before {
  content: ""; display: block; width: 6rpx; height: 26rpx; background: var(--primary); border-radius: 4rpx; margin-right: 12rpx;
}

.list-row {
  display: flex; justify-content: space-between; align-items: center; padding: 26rpx 0; border-bottom: 1rpx solid var(--border);
}
.list-row:last-of-type { border-bottom: none; padding-bottom: 0; }
.list-row:first-of-type { padding-top: 0; }
.row-label { font-size: 28rpx; font-weight: 600; color: var(--text-main); }
.input-inline {
  width: 200rpx; text-align: right; font-size: 28rpx; font-weight: 600; color: var(--text-main); border: none; background: transparent; padding: 0;
}
.input-inline::placeholder { font-weight: 400; color: var(--text-muted); }

.form-group { margin-bottom: 24rpx; }
.form-group:last-child { margin-bottom: 0; }
.label { font-size: 28rpx; font-weight: 600; color: var(--text-main); margin-bottom: 16rpx; }
.hint { font-size: 24rpx; color: var(--text-muted); margin-top: 8rpx; line-height: 1.4; }

.input-full {
  width: 100%; height: 76rpx; padding: 0 24rpx; border: 1rpx solid var(--border); border-radius: 16rpx; background: var(--bg); font-size: 28rpx; box-sizing: border-box; color: var(--text-main);
}
.textarea {
  width: 100%; height: 160rpx; padding: 24rpx; border: 1rpx solid var(--border); border-radius: 16rpx; background: var(--bg); font-size: 28rpx; box-sizing: border-box; color: var(--text-main);
}
.divider { height: 1rpx; background: var(--border); margin: 32rpx 0; }

/* 胶囊按钮 (售卖模式) */
.pill-group { display: flex; gap: 16rpx; flex-wrap: wrap; }
.pill {
  padding: 0 32rpx; height: 64rpx; line-height: 64rpx; border-radius: 32rpx; background: var(--bg); color: var(--text-sub); font-size: 26rpx; font-weight: 600; transition: all 0.2s;
}
.pill-on { background: var(--primary); color: #fff; }

/* ================= 规格组增强样式 ================= */
.spec-group {
  background: var(--bg);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.spec-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.spec-tag {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border: 1rpx solid var(--border);
  border-radius: 12rpx;
  padding: 4rpx 8rpx 4rpx 16rpx;
}
.spec-tag-input {
  width: 100rpx;
  font-size: 24rpx;
  color: var(--text-main);
  text-align: center;
}
.spec-tag-close {
  width: 40rpx;
  height: 40rpx;
  line-height: 38rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--text-muted);
}
.spec-tag-add {
  height: 56rpx;
  line-height: 52rpx; /* border offset */
  padding: 0 20rpx;
  border: 2rpx dashed var(--text-muted);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  box-sizing: border-box;
}

/* ================= 图片上传网格 ================= */
.img-grid { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 10rpx; }
.img-box { position: relative; width: 160rpx; height: 160rpx; border-radius: 16rpx; overflow: hidden; background: var(--bg); }
.img { width: 100%; height: 100%; }
.img-remove { position: absolute; top: 8rpx; right: 8rpx; width: 44rpx; height: 44rpx; border-radius: 50%; background: rgba(0,0,0,0.6); color: #fff; font-size: 32rpx; line-height: 38rpx; text-align: center; border: 4rpx solid #fff; }
.img-box-add { display: flex; flex-direction: column; align-items: center; justify-content: center; border: 2rpx dashed var(--border); background: var(--card-bg); }
.img-add-plus { font-size: 48rpx; color: var(--text-muted); }
.img-add-sub { margin-top: 8rpx; font-size: 22rpx; color: var(--text-muted); }

/* ================= 弹窗公用样式 ================= */
.mask {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 200; display: flex; flex-direction: column; justify-content: flex-end;
}
.modal-bottom {
  background: #FFFFFF; border-radius: 32rpx 32rpx 0 0; overflow: hidden; max-height: 80vh; display: flex; flex-direction: column;
}
.modal-center {
  background: #FFFFFF; border-radius: 24rpx; width: 85%; margin: auto; overflow: hidden;
}
.modal-header { padding: 32rpx 32rpx 24rpx; border-bottom: 1rpx solid var(--border); }

.category-list {
  max-height: 320rpx;
  overflow-y: auto;
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  background: var(--bg);
  padding: 0 20rpx;
}
.category-row {
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  border-bottom: 1rpx solid var(--border);
}
.category-row:last-child {
  border-bottom: none;
}
.category-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-main);
  flex: 1;
  min-width: 0;
  word-break: break-all;
}

/* SKU 列表样式 */
.sku-item {
  display: flex; align-items: center; justify-content: space-between; padding: 20rpx 0; border-bottom: 1rpx solid var(--border);
}
.sku-item-header { font-weight: 800; border-bottom: 2rpx solid var(--border); padding-top: 32rpx; }
.sku-text { flex: 1; font-size: 26rpx; color: var(--text-main); padding-right: 24rpx; word-break: break-all; }
.sku-price-header { width: 180rpx; text-align: right; font-size: 26rpx; color: var(--text-main); }
.sku-price-input { width: 180rpx; height: 64rpx; text-align: right; background: var(--bg); font-weight: 600; }