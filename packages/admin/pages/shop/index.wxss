@import "../../styles/admin.wxss";

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.main-scroll {
  flex: 1;
  height: 0;
}

.page-content {
  padding: 0 24rpx;
}

.fold-card {
  margin-bottom: 20rpx;
  border-radius: 28rpx;
  overflow: hidden;
  background: var(--card-bg);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

.fold-head {
  padding: 24rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.fold-head-main {
  min-width: 0;
}

.fold-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-main);
}

.fold-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--text-sub);
}

.fold-arrow {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  font-weight: 600;
}

.fold-body {
  padding: 0 12rpx 12rpx;
  background: rgba(243, 244, 246, 0.65);
}

.compact-card {
  margin-bottom: 12rpx;
  border-radius: 22rpx;
  padding: 24rpx;
}

.compact-card:last-child {
  margin-bottom: 0;
}

.consume-card {
  border: 2rpx solid rgba(16, 185, 129, 0.22);
}

.consume-input {
  width: 220rpx;
  background: var(--bg);
  padding: 0 16rpx;
  border-radius: 12rpx;
}

.consume-tip {
  color: var(--warning);
  text-align: right;
  width: 100%;
  margin-top: 12rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: "";
  display: block;
  width: 6rpx;
  height: 26rpx;
  background: var(--primary);
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.divider {
  height: 1rpx;
  background: var(--border);
  margin: 32rpx 0;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--text-muted);
  text-align: center;
  padding: 32rpx 0;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.badge-success {
  background: rgba(16, 185, 129, 0.1);
  color: var(--success);
}

.badge-disabled {
  background: var(--bg);
  color: var(--text-sub);
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.hint {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
  line-height: 1.4;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  background: var(--card-bg);
  color: var(--text-main);
  font-size: 28rpx;
  box-sizing: border-box;
}

.input-inline {
  width: 200rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  border: none;
  background: transparent;
  padding: 0;
}

.input-inline::placeholder {
  font-weight: 400;
  color: var(--text-muted);
}

.card-action {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 24rpx;
}

.list-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.list-row:last-of-type {
  border-bottom: none;
  padding-bottom: 0;
}

.list-row:first-of-type {
  padding-top: 0;
}

.row-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.data-item {
  display: flex;
  padding: 24rpx 0;
  gap: 24rpx;
  border-bottom: 1rpx solid var(--border);
}

.data-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.item-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  background: var(--bg);
  flex-shrink: 0;
}

.data-main {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.data-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--text-main);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.data-sub {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 8rpx;
  line-height: 1.4;
}

.data-side {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-end;
  justify-content: center;
}

.banner-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.banner-item,
.banner-add {
  width: 200rpx;
  height: 132rpx;
  border-radius: 12rpx;
}

.banner-item {
  position: relative;
  overflow: visible;
}

.banner-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: var(--bg);
}

.banner-del {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 32rpx;
  line-height: 38rpx;
  text-align: center;
  border: 4rpx solid #fff;
}

.banner-add {
  border: 2rpx dashed var(--text-muted);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--text-muted);
  background: var(--card-bg);
}

.time-range-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
}

.time-input {
  width: 96rpx;
  height: 64rpx;
  border: 1rpx solid var(--border);
  border-radius: 12rpx;
  background: var(--card-bg);
  text-align: center;
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 600;
}

.time-sep {
  color: var(--text-sub);
  font-weight: 600;
}

.qr-preview,
.thumb-preview {
  width: 240rpx;
  height: 240rpx;
  margin-top: 16rpx;
  border-radius: 16rpx;
  background: var(--bg);
}

.printer-status-row {
  padding: 18rpx 20rpx;
  border-radius: 16rpx;
  background: var(--bg);
  margin-bottom: 8rpx;
}

.printer-status-main {
  min-width: 0;
}

.printer-status-title {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-main);
}

.printer-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.printer-dot.is-on {
  background: var(--success);
}

.printer-dot.is-off {
  background: #D1D5DB;
}
