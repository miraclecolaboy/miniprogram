.page {
  height: 100%;
  overflow: hidden;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
}

.page-header {
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}

.top-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 22rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.04);
}

.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.row-right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.title { font-size: 34rpx; font-weight: 800; }
.sub { margin-top: 10rpx; font-size: 24rpx; color: #6b7280; }

.block {
  margin-top: 18rpx;
  padding-top: 14rpx;
  border-top: 1rpx solid #f0f0f0;
}

.block-title { font-size: 26rpx; font-weight: 800; margin-bottom: 14rpx; }
.form-row { margin-bottom: 14rpx; }

.input {
  width: 100%;
  height: 72rpx;
  padding: 0 18rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 14rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx 18rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 14rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
}

.hint { margin-top: 10rpx; font-size: 24rpx; color: #6b7280; }

.page-body {
  flex: 1;
  padding: 16rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}

.listScroll { height: 100%; }

.list-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 18rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.04);
}

.list-title { font-size: 26rpx; font-weight: 800; margin-bottom: 10rpx; }
.empty { padding: 18rpx 0; font-size: 24rpx; color: #9ca3af; }

.item {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  padding: 18rpx 0;
  border-top: 1rpx solid #f0f0f0;
}
.item:first-of-type { border-top: none; }

.item-left { flex: 1; min-width: 0; }
.item-name { font-size: 28rpx; font-weight: 800; }
.item-sub { margin-top: 8rpx; font-size: 24rpx; font-weight: 700; }
.item-desc { margin-top: 8rpx; font-size: 24rpx; color: #6b7280; word-break: break-all; }

.item-right { display: flex; flex-direction: column; gap: 12rpx; align-items: flex-end; justify-content: center; }

.btn {
  padding: 14rpx 18rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
  border: 1rpx solid #e5e7eb;
  background: #fff;
}
.btn-primary { background: #000000; color: #fff; border: none; }
.btn-danger { background: #ef4444; color: #fff; border: none; }
.btn-disabled { opacity: 0.5; }

/* ===== 新增：小图/二维码预览（不影响原有样式） ===== */
.qr-preview {
  width: 320rpx;
  height: 320rpx;
  margin-top: 12rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
}

.thumb-preview {
  width: 220rpx;
  height: 220rpx;
  margin-top: 12rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
}

.item-thumb {
  width: 92rpx;
  height: 92rpx;
  border-radius: 16rpx;
  margin-right: 16rpx;
  background: #f3f4f6;
  flex-shrink: 0;
}

/* 新增：左侧标签 */
.form-label {
  font-size: 28rpx;
  color: #333;
  flex: 1; /* 占据左侧剩余空间 */
}

/* 新增：右侧短输入框样式 */
.input-inline {
  width: 240rpx !important; /* 强制覆盖原 input 的 100% 宽度 */
  text-align: right;        /* 数字靠右对齐 */
  background: #f9f9f9;      /* 浅灰背景区分 */
}

/* ===== 营业时间（数字填充） ===== */
.service-hours { display: flex; flex-direction: column; gap: 10rpx; }
.time-range-row { display: flex; align-items: center; gap: 8rpx; flex-wrap: wrap; }
.time-input {
  width: 88rpx;
  height: 72rpx;
  padding: 0 10rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 14rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
  text-align: center;
}
.time-sep { color: #6b7280; font-size: 28rpx; }
.time-range-del { padding: 10rpx 12rpx; font-size: 22rpx; }
