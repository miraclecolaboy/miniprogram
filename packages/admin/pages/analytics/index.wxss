@import "../../styles/admin.wxss";

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: #F7F8FA;
  font-family: -apple-system, BlinkMacSystemFont, Helvetica, sans-serif;
}

.main-scroll {
  flex: 1;
  height: 0;
}

.page-content {
  padding: 0 32rpx;
}

.filter-section {
  margin-bottom: 28rpx;
}

.tabs-pill {
  display: flex;
  background: #F2F3F5;
  border-radius: 16rpx;
  padding: 6rpx;
  gap: 6rpx;
}

.tab-pill-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: var(--text-sub);
  padding: 12rpx 0;
  border-radius: 12rpx;
  font-weight: 600;
}

.tab-pill-item.active {
  background: #ffffff;
  color: var(--text-main);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.meta-inline {
  font-size: 24rpx;
  color: var(--text-sub);
  margin: -6rpx 0 18rpx;
}

.search-row {
  margin: 0 0 20rpx;
}

.search-input {
  height: 64rpx;
  line-height: 64rpx;
  background: #FFFFFF;
  border: none;
  border-radius: 32rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: var(--text-main);
}

.order-filter {
  margin-bottom: 28rpx;
}

.order-time-tabs .tab-pill-item {
  font-size: 24rpx;
}

.date-row {
  margin-top: 14rpx;
  color: var(--text-sub);
  font-size: 24rpx;
}

.custom-range {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.date-picker {
  min-width: 210rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 28rpx;
  border: none;
  background: #FFFFFF;
  color: var(--text-main);
  font-size: 24rpx;
  padding: 0 14rpx;
}

.date-sep {
  color: var(--text-sub);
  font-size: 24rpx;
}

.error-row {
  margin-bottom: 24rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background: #fef2f2;
  color: #ef4444;
  font-size: 24rpx;
  font-weight: 600;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-main);
  margin: 36rpx 0 24rpx 0;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.metric-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0,0,0,0.02);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.metric-label {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-bottom: 10rpx;
  font-weight: 600;
}

.metric-value {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 44rpx;
  font-size: 38rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.2;
}

.card-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: "";
  display: block;
  width: 6rpx;
  height: 26rpx;
  background: var(--primary);
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.member-item {
  margin-bottom: 24rpx;
}

.member-item:last-child {
  margin-bottom: 0;
}

.member-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.member-bar {
  height: 12rpx;
  background: var(--bg);
  border-radius: 6rpx;
  overflow: hidden;
}

.member-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #374151 0%, #111827 100%);
  border-radius: 6rpx;
}

.row-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.data-sub {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 6rpx;
}

.recharge-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
}

.recharge-name {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
}

.recharge-phone {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: var(--text-sub);
}

.level-tag {
  font-size: 22rpx;
  color: #1f2937;
  background: #f3f4f6;
  border-radius: 999rpx;
  padding: 8rpx 16rpx;
  font-weight: 600;
}

.recharge-metrics {
  margin-top: 22rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 14rpx;
}

.metric-col {
  background: #F7F8FA;
  border-radius: 14rpx;
  padding: 14rpx 12rpx;
}

.metric-col-label {
  font-size: 22rpx;
  color: var(--text-sub);
}

.metric-col-value {
  margin-top: 8rpx;
  font-family: 'DIN Alternate', sans-serif;
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
}

.metric-col-action {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: var(--primary);
}

.row-right {
  display: none;
  margin-top: 22rpx;
}

.remark-block {
  background: #f9fafb;
  border: 1rpx dashed var(--border);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  margin-top: 28rpx;
}

.remark-label {
  font-size: 24rpx;
  color: var(--text-muted);
  font-weight: 800;
  flex-shrink: 0;
}

.remark-text {
  font-size: 24rpx;
  color: var(--text-sub);
  line-height: 1.6;
}

.empty-hint {
  text-align: center;
  color: var(--text-muted);
  font-size: 26rpx;
  padding: 60rpx 0;
}

.popup-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1999;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 0 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.popup-panel {
  width: 100%;
  max-height: 74vh;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.popup-header {
  margin-bottom: 14rpx;
}

.popup-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
}

.popup-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.popup-close {
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  color: var(--text-sub);
}

.popup-list {
  max-height: 56vh;
}

.popup-item {
  padding: 18rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.popup-item:last-child {
  border-bottom: none;
}

.popup-scene {
  font-size: 27rpx;
  color: var(--text-main);
  font-weight: 700;
}

.popup-delta {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 32rpx;
  font-weight: 800;
}

.popup-delta.plus {
  color: #10b981;
}

.popup-delta.minus {
  color: #ef4444;
}

.popup-remark {
  margin-top: 8rpx;
  font-size: 23rpx;
  color: var(--text-sub);
}

.popup-time {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: var(--text-muted);
}
