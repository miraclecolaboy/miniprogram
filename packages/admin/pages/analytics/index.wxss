@import "../../styles/admin.wxss";

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden; 
  background-color: var(--bg);
}

.main-scroll {
  flex: 1;
  height: 0;
}

.page-content {
  padding: 0 32rpx;
}

/* ===== 时间筛选区 (拨片风格) ===== */
.filter-section {
  margin-bottom: 32rpx;
}

.tabs-pill {
  display: flex;
  background: #E5E7EB;
  border-radius: 16rpx;
  padding: 6rpx;
  gap: 6rpx;
}

.tab-pill-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: var(--text-sub);
  padding: 12rpx 0;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.2s;
}

.tab-pill-item.active {
  background: #FFFFFF;
  color: var(--text-main);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.meta-row {
  font-size: 22rpx;
  color: var(--text-muted);
  text-align: right;
  margin-top: 16rpx;
}

.error-row {
  margin-bottom: 24rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background: #FEF2F2;
  color: #EF4444;
  font-size: 24rpx;
  font-weight: 600;
}

/* ===== 分类大标题与网格数据卡片 ===== */
.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--text-main);
  margin: 40rpx 0 24rpx 0;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.metric-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.metric-label {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.metric-value {
  font-size: 38rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.2;
}

/* ===== 模块卡片公共部分复用 ===== */
.card-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.card-title::before {
  content: "";
  display: block;
  width: 6rpx;
  height: 26rpx;
  background: var(--primary);
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.list-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
}
.list-row:last-of-type { border-bottom: none; padding-bottom: 0; }
.list-row:first-of-type { padding-top: 0; }

.row-label { font-size: 28rpx; font-weight: 600; color: var(--text-main); }
.data-sub { font-size: 24rpx; color: var(--text-sub); margin-top: 6rpx; }

/* ===== 趋势表格 ===== */
.trend-table { display: flex; flex-direction: column; }
.trend-header {
  display: flex;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border);
  margin-bottom: 16rpx;
}
.th { font-size: 24rpx; font-weight: 800; color: var(--text-main); }
.trend-row { display: flex; padding: 16rpx 0; border-bottom: 1rpx solid #F9FAFB; }
.trend-row:last-child { border-bottom: none; }
.td { font-size: 24rpx; color: var(--text-main); }

/* ===== 会员等级分布条 ===== */
.member-item { margin-bottom: 24rpx; }
.member-item:last-child { margin-bottom: 0; }
.member-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}
.member-bar {
  height: 12rpx;
  background: var(--bg);
  border-radius: 6rpx;
  overflow: hidden;
}
.member-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #374151 0%, #111827 100%);
  border-radius: 6rpx;
}

/* ===== 排行榜列表 ===== */
.data-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
  gap: 24rpx;
}
.data-item:last-child { border-bottom: none; padding-bottom: 0; }

.rank-badge {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 12rpx;
  background: var(--bg);
  color: var(--text-sub);
  font-size: 24rpx;
  font-weight: 800;
  flex-shrink: 0;
}
.rank-top {
  background: var(--primary);
  color: #fff;
}

.data-main { flex: 1; min-width: 0; }
.data-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--text-main);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}
.data-side { display: flex; align-items: center; }

/* ===== 底部统计提示说明 ===== */
.remark-block {
  background: #F9FAFB;
  border: 1rpx dashed var(--border);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  margin-top: 32rpx;
}
.remark-label { font-size: 24rpx; color: var(--text-muted); font-weight: 800; flex-shrink: 0;}
.remark-text { font-size: 24rpx; color: var(--text-sub); line-height: 1.6; }

.empty-hint {
  text-align: center;
  color: var(--text-muted);
  font-size: 26rpx;
  padding: 60rpx 0;
}