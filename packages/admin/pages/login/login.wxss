@import "../../styles/admin.wxss";

page {
  height: 100%;
  background-color: #f7f8fa;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
  padding: 0 40rpx; 
  box-sizing: border-box;
}

.card {
  width: 100%;
  max-width: 680rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

input {
  background: #f5f7fa;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
  box-sizing: border-box;
}

input:active, input:focus {
  background: #fff;
  border: 2rpx solid #000000; 
}

button.btn-primary {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  background-color: #000000; 
  color: #fff;
  font-weight: 500;
  margin-top: 60rpx;
  padding: 0;
}

.text-muted {
  color: #909399;
}

.mt-32 { margin-top: 32rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-16 { margin-top: 16rpx; }