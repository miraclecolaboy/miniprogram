/* pages/orders/refund-handle/index.wxss */
@import "../../../styles/admin.wxss";

.page { padding: 24rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 24rpx; box-shadow: 0 6rpx 18rpx rgba(0,0,0,.06); }
.row { display: flex; align-items: center; justify-content: space-between; }
.title { font-size: 32rpx; font-weight: 600; }
.status { font-size: 26rpx; color: #333; }
.sub { font-size: 26rpx; color: #666; margin-top: 10rpx; }
.goods { margin-top: 12rpx; }
.goodsLine { font-size: 26rpx; color: #333; margin-top: 6rpx; }
.hr { height: 1rpx; background: #eee; margin: 18rpx 0; }
.inputLabel { font-size: 26rpx; color: #666; margin-top: 18rpx; }
.textarea { width: 100%; min-height: 140rpx; padding: 18rpx; border: 1rpx solid #e5e5e5; border-radius: 12rpx; margin-top: 10rpx; font-size: 26rpx; box-sizing: border-box; }
.btnRow { display: flex; gap: 16rpx; margin-top: 18rpx; }
.btn { flex: 1; font-size: 28rpx; }
.primary { background: #000000; color: #fff; }
.danger { background: #ff4d4f; color: #fff; }
.tip { font-size: 24rpx; color: #999; margin-top: 18rpx; }
