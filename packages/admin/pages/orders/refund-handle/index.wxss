@import "../../../styles/admin.wxss";

.page {
  box-sizing: border-box;
  min-height: 100vh;
  background: var(--bg);
  padding: 0 0 40rpx 0;
}

.page-header {
  padding: 32rpx 32rpx 16rpx;
}

.content {
  padding: 0 24rpx;
}

/* ================= 卡片共用 ================= */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.card-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.card-title::before {
  content: "";
  display: block;
  width: 6rpx;
  height: 26rpx;
  background: var(--primary);
  border-radius: 4rpx;
  margin-right: 12rpx;
}

/* ================= 信息网格 ================= */
.info-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.info-row {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 1.5;
}
.info-label {
  color: var(--text-muted);
  width: 140rpx;
  flex-shrink: 0;
}
.info-value {
  color: var(--text-main);
  flex: 1;
  word-break: break-all;
}

/* ================= 订单明细内嵌区块 ================= */
.goods-block {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
}
.goods-line {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}
.goods-line:last-child { margin-bottom: 0; }
.goods-dot {
  color: #D1D5DB;
  font-size: 24rpx;
  margin-top: -2rpx;
}
.goods-name {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 600;
  line-height: 1.4;
}

.remark-block {
  background: #FFFBEB;
  border: 1rpx dashed #FDE68A;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: flex-start;
}
.remark-label { font-size: 24rpx; color: #D97706; font-weight: 800; flex-shrink: 0;}
.remark-text { font-size: 24rpx; color: #B45309; font-weight: 600; line-height: 1.5; }

/* ================= 表单与操作区 ================= */
.form-group {
  margin-bottom: 32rpx;
}
.label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}
.textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 16rpx;
  background: #F9FAFB;
  font-size: 28rpx;
  box-sizing: border-box;
  color: var(--text-main);
}

.action-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}
.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.2s;
}
.btn-primary { background: #000000; color: #FFFFFF; }
.btn-danger { background: #FEF2F2; color: #EF4444; border: 1rpx solid #FECACA; box-sizing: border-box; }

.hint-center {
  font-size: 24rpx;
  color: var(--text-muted);
  text-align: center;
  margin-top: 16rpx;
}

.empty-hint {
  text-align: center;
  color: var(--text-muted);
  font-size: 26rpx;
  padding: 100rpx 0;
}