@import "../../styles/admin.wxss";

.page { box-sizing: border-box; min-height: 100vh; padding-bottom: 140rpx; }
.tabs { margin-top: 24rpx; }
.tabRow { display: flex; gap: 32rpx; flex-wrap: nowrap; overflow-x: auto; padding-bottom: 16rpx; }
.tabItem { font-size: 28rpx; color: var(--text-sub); padding-bottom: 8rpx; white-space: nowrap; transition: all 0.2s; }
.tabActive { color: var(--primary); font-weight: 800; border-bottom: 4rpx solid var(--primary); }

.list { padding: 0 32rpx; margin-top: 8rpx; }
.order-card { padding: 32rpx; }

.top-row { display: flex; justify-content: space-between; align-items: center; border-bottom: 2rpx solid var(--border); padding-bottom: 24rpx; margin-bottom: 24rpx; }
.order-type { font-weight: 800; font-size: 30rpx; color: var(--text-main); }
.order-no { color: var(--text-muted); font-size: 24rpx; font-weight: normal; margin-left: 8rpx; }

.badge { padding: 8rpx 16rpx; border-radius: 12rpx; font-size: 22rpx; font-weight: 600; }
.badge-making, .badge-paid, .badge-processing { background: #FEF3C7; color: #D97706; }
.badge-ready, .badge-delivering { background: #D1FAE5; color: #059669; }
.badge-done { background: #F3F4F6; color: #6B7280; }
.badge-refund { background: #FEE2E2; color: #EF4444; }

.order-info { font-size: 26rpx; color: var(--text-sub); line-height: 1.8; }
.info-line { word-break: break-all; }

.order-price-row { margin-top: 24rpx; }
.price-main { font-size: 30rpx; font-weight: 800; color: var(--text-main); }
.pay-method { font-size: 24rpx; color: var(--text-muted); font-weight: normal; }
.price-detail { font-size: 22rpx; color: var(--text-muted); margin-top: 4rpx; }

.refund-block { margin-top: 24rpx; background: #FFFBF0; border: 2rpx solid #FDE68A; padding: 16rpx 24rpx; border-radius: 16rpx; display: flex; justify-content: space-between; align-items: center; font-size: 24rpx; color: #D97706; }

.action-row { display: flex; justify-content: flex-end; gap: 16rpx; margin-top: 32rpx; flex-wrap: wrap; }
.tip { text-align: center; color: var(--text-muted); font-size: 24rpx; padding: 32rpx 0; }

/* 快递弹窗 */
.modalMask { position: fixed; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,.45); display: flex; align-items: center; justify-content: center; z-index: 99; }
.modalCard { width: 80%; background: #fff; border-radius: 24rpx; padding: 32rpx; }
.modalTitle { font-size: 32rpx; font-weight: 800; margin-bottom: 24rpx; }
.modalInput { background: #f5f5f5; border-radius: 16rpx; padding: 20rpx; font-size: 28rpx; }
.modalBtnRow { display: flex; justify-content: flex-end; gap: 16rpx; margin-top: 32rpx; }