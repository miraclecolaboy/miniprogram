@import "../../styles/admin.wxss";

.page {
  box-sizing: border-box;
  min-height: 100vh;
  background: var(--bg);
}

.header-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(243, 244, 246, 0.95);
  backdrop-filter: blur(12px);
  padding-bottom: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.tabs-scroll {
  width: 100%;
  box-sizing: border-box;
}

.tabs {
  display: flex;
  padding: 0 32rpx;
  gap: 48rpx;
  flex-wrap: nowrap;
}

.tab-item {
  position: relative;
  font-size: 28rpx;
  color: var(--text-sub);
  padding: 16rpx 0;
  white-space: nowrap;
  font-weight: 500;
  transition: all 0.2s;
}

.tab-item.active {
  color: var(--primary);
  font-weight: 800;
  font-size: 30rpx;
}

.tab-line {
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 6rpx;
  background: var(--primary);
  border-radius: 4rpx;
}

.list-container {
  padding: 24rpx;
}

.order-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.card-header {
  border-bottom: 1rpx solid var(--border);
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
}
.order-id-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.mode-tag {
  font-size: 20rpx;
  font-weight: 800;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: #fff;
}
.mode-ziti { background: #3B82F6; }
.mode-waimai { background: #F59E0B; }
.mode-kuaidi { background: #10B981; }

.order-no {
  font-size: 26rpx;
  font-weight: 800;
  color: var(--text-main);
}

.badge {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 800;
}
.badge-making, .badge-paid, .badge-processing { background: #FEF3C7; color: #D97706; }
.badge-ready, .badge-delivering { background: #D1FAE5; color: #059669; }
.badge-done { background: var(--bg); color: var(--text-sub); }
.badge-refund { background: #FEE2E2; color: #EF4444; }

.goods-block {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
}
.goods-line {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}
.goods-line:last-child { margin-bottom: 0; }
.goods-dot {
  color: #D1D5DB;
  font-size: 24rpx;
  margin-top: -2rpx;
}
.goods-name {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 600;
  line-height: 1.4;
}

.info-grid {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}
.info-row {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 1.5;
}
.info-label {
  color: var(--text-muted);
  width: 140rpx;
  flex-shrink: 0;
}
.info-value {
  color: var(--text-main);
  flex: 1;
  word-break: break-all;
}

.remark-block {
  background: #FFFBEB;
  border: 1rpx dashed #FDE68A;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}
.remark-label { font-size: 24rpx; color: #D97706; font-weight: 800; flex-shrink: 0;}
.remark-text { font-size: 24rpx; color: #B45309; font-weight: 600; line-height: 1.5; }

.refund-alert {
  background: #FEF2F2;
  border: 1rpx solid #FECACA;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.refund-alert-text {
  font-size: 24rpx;
  color: #EF4444;
  font-weight: 800;
}

.price-section {
  border-top: 1rpx dashed var(--border);
  padding-top: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}
.price-detail {
  font-size: 22rpx;
  color: var(--text-muted);
}
.price-main {
  font-size: 26rpx;
  color: var(--text-main);
  display: flex;
  align-items: baseline;
  gap: 6rpx;
}
.price-symbol {
  font-size: 24rpx;
  font-weight: 800;
  margin-left: 8rpx;
}
.price-amount {
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: -1rpx;
}
.pay-method {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-left: 8rpx;
}

.action-bar {
  border-top: 1rpx solid var(--border);
  margin-top: 24rpx;
  padding-top: 24rpx;
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}
.action-btn {
  width: 100%;
  min-width: 0;
  padding: 0 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.empty-hint {
  text-align: center;
  color: var(--text-muted);
  font-size: 26rpx;
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.4); z-index: 200; display: flex; flex-direction: column; justify-content: center; backdrop-filter: blur(4px); }
.modal-center { background: #FFFFFF; border-radius: 24rpx; width: 85%; margin: auto; overflow: hidden; box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.1); }
.modal-header { padding: 32rpx 32rpx 24rpx; border-bottom: 1rpx solid var(--border); }
.input-full { width: 100%; height: 84rpx; padding: 0 24rpx; border: 1rpx solid var(--border); border-radius: 16rpx; background: var(--bg); font-size: 28rpx; box-sizing: border-box; color: var(--text-main); }
